name:                   oset
version:                0.2.0.0
synopsis:               An insertion-order-preserving set
description:
    This package provides @OSet@, an insertion-order-preserving set, with type class instances for @Foldable@, @Semigroup@, @Monoid@ and @Data@.
homepage:               https://github.com/rcook/oset#readme
license:                MIT
license-file:           LICENSE
author:                 Richard Cook
maintainer:             rcook@rcook.org
copyright:              2019 Richard Cook
category:               Command Line
build-type:             Simple
cabal-version:          >= 1.10
extra-source-files:     README.md

executable oset-app
  default-language:     Haskell2010
  hs-source-dirs:       app
  main-is:              Main.hs
  build-depends:
      base >= 4.7 && < 5
    , containers
    , oset

library
  default-language:     Haskell2010
  hs-source-dirs:       lib
  build-depends:
      base >= 4.7 && < 5
    , containers
  exposed-modules:
      Data.Set.Ordered

test-suite oset-spec
  type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  hs-source-dirs:       spec
  main-is:              Spec.hs
  other-modules:
      Data.Set.OrderedSpec
  build-depends:
      base >= 4.7 && < 5
    , containers
    , hspec
    , oset
