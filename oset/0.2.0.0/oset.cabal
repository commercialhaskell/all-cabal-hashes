name:                   oset
version:                0.2.0.0
x-revision: 3
synopsis:               An insertion-order-preserving set
description:
    This package provides @OSet@, an insertion-order-preserving set, with type class instances for @Foldable@, @Semigroup@, @Monoid@ and @Data@.
homepage:               https://github.com/rcook/oset#readme
license:                MIT
license-file:           LICENSE
author:                 Richard Cook
maintainer:             rcook@rcook.org
copyright:              2019 Richard Cook
category:               Command Line
build-type:             Simple
cabal-version:          >= 1.10
extra-source-files:     README.md

executable oset-app
  default-language:     Haskell2010
  hs-source-dirs:       app
  main-is:              Main.hs
  build-depends:
      base              >= 4.11 && < 4.13
    , containers        >= 0.6 && < 0.7
    , oset

library
  default-language:     Haskell2010
  hs-source-dirs:       lib
  build-depends:
      base              >= 4.11 && < 4.13
    , containers        >= 0.6 && < 0.7
  exposed-modules:
      Data.Set.Ordered

test-suite oset-spec
  type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  hs-source-dirs:       spec
  main-is:              Spec.hs
  other-modules:
      Data.Set.OrderedSpec
  build-depends:
      base              >= 4.11 && < 4.13
    , containers        >= 0.6 && < 0.7
    , hspec             >= 2.6 && < 2.8
    , oset
