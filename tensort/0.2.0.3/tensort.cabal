version:            0.2.0.3

tested-with:        GHC==9.8.2, 
                    GHC==9.6.4, 
                    GHC==9.4.8,
                    GHC==9.2.8,
                    GHC==9.2.1,
                    GHC==9.0.2,
                    GHC==8.10.7,
                    GHC==8.8.4,
                    GHC==8.6.5,
                    GHC==8.4.4,
