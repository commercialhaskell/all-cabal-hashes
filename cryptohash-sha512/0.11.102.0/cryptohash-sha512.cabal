  type:              exitcode-stdio-1.0
  hs-source-dirs:    src-tests
  main-is:           test-sha512.hs
  ghc-options:       -Wall -threaded
  build-depends:     cryptohash-sha512
                   , base
                   , bytestring

                   , base16-bytestring >= 1.0.1.0  && < 1.1
                   , SHA               >= 1.6.4    && < 1.7
                   , tasty             >= 1.4      && < 1.5
                   , tasty-quickcheck  >= 0.10     && < 0.11
