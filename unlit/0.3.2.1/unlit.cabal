license-file:        LICENSE
author:              Wen Kokke
maintainer:          wenkokke@users.noreply.github.com
copyright:           2014 (c) Wen Kokke
category:            Language
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type:     git
  location: https://github.com/wenkokke/unlit

library
  exposed-modules:     Unlit.Text, Unlit.String
  hs-source-dirs:      src
  other-extensions:    OverloadedStrings
  ghc-options:         -fwarn-incomplete-patterns
  build-depends:       base >= 4.5 && < 5, directory, text
  default-language:    Haskell2010
  

executable unlit
  main-is:             Main.hs
  hs-source-dirs:      src
  other-modules:       Unlit.Text
  other-extensions:    OverloadedStrings
  ghc-options:         -fwarn-incomplete-patterns
  build-depends:       base >= 4 && < 5, directory, text
  default-language:    Haskell2010
