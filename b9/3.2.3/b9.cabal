                   , optparse-applicative >= 0.13 && < 1
                   , process >= 1.4 && < 2
                   , shake >= 0.17.6 && < 0.20
                   , text == 1.2.*
                   , unordered-containers >= 0.2 && < 1
                   , vector >= 0.11 && < 1
                   , yaml >= 0.8 && < 1

