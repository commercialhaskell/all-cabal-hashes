cabal-version: 1.12

name:           wikimusic-api-spec
version:        1.2.0.0
description:    Please see the README at <https://gitlab.com/jjba-projects/wikimusic-api-spec>
homepage:       https://gitlab.com/jjba-projects/wikimusic-api-spec
bug-reports:    https://gitlab.com/jjba-projects/wikimusic-api-spec/-/issues
author:         Josep Bigorra
maintainer:     Josep Bigorra <jjbigorra@gmail.com>
copyright:      2023 Josep Bigorra
license:        GPL-3
build-type:     Simple
license-file:   COPYING                
                
extra-source-files:
    README.org

source-repository head
  type: git
  location: https://gitlab.com/jjba-projects/wikimusic-api-spec
  subdir: wikimusic-api-spec

library
  exposed-modules:
      WikiMusic.Servant.ApiSpec
      
  other-modules:
      Paths_wikimusic_api_spec
  hs-source-dirs:
      src
  ghc-options: -Wall -threaded
  default-extensions:
      DataKinds
      DefaultSignatures
      DuplicateRecordFields
      EmptyDataDecls
      ExistentialQuantification
      FlexibleContexts
      FlexibleInstances
      FunctionalDependencies
      GADTs
      InstanceSigs
      KindSignatures
      LambdaCase
      MultiWayIf
      NamedFieldPuns
      NoImplicitPrelude
      OverloadedStrings
      PartialTypeSignatures
      RecordWildCards
      TypeFamilies
      ViewPatterns

  build-depends:
      aeson
    , base < 5
    , bytestring
    , keys
    , mtl
    , openapi3
    , relude
    , time
    , servant
    , servant-openapi3
    , servant-rate-limit
    , servant-server
    , text
    , filepath
    , directory
    , uuid
    , vector
    , wikimusic-model-hs
  default-language: GHC2021
