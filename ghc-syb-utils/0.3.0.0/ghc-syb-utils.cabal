build-type:      Simple
cabal-version:   >= 1.10

library
  build-depends:   base >= 4 && < 5
                 , syb >= 0.1.0
                 , ghc >= 7.10 && < 8.6
                 , bytestring

  hs-source-dirs:  .
  default-language: Haskell2010
  default-extensions: Rank2Types, CPP
  ghc-options:    -Wall

  exposed-modules: GHC.SYB.Utils
