        Control.Concurrent.Timer
      , Control.Concurrent.Timer.Lifted

    build-depends:
        base              == 4.5.*
      , lifted-base       == 0.1.*
      , monad-control     == 0.3.*
      , transformers-base == 0.4.*
      , suspend           == 0.1.*

    hs-source-dirs:      src
    ghc-options:         -Wall -fwarn-unused-imports

