cabal-version:       >=1.10

name:                scalpel-search
version:             0.1.0.1
synopsis:            scalpel scrapers for search engines
description:         [scalpel](https://hackage.haskell.org/package/scalpel)
                     scrapers for DuckDuckGo and Google search engines.
bug-reports:         fa-ml@ariis.it
license:             GPL-3
license-file:        LICENSE
author:              Francesco Ariis
maintainer:          fa-ml@ariis.it
copyright:           Â© 2020 Francesco Ariis
category:            Web
build-type:          Simple
extra-source-files:  CHANGES,
                     README

library
  exposed-modules:     Text.HTML.Scalpel.Search
  build-depends:       base == 4.*,
                       scalpel-core,
                       tagsoup,
                       text,
                       uri
  hs-source-dirs:      src/
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite test
  main-is:             Test.hs
  other-modules:       Text.HTML.Scalpel.Search
  build-depends:       base == 4.*,
                       scalpel-core,
                       tagsoup,
                       text,
                       uri
                       -- the above plus hspec and scalpel
                       -- (for http fetching html)
                       , scalpel
                       , hspec
  hs-source-dirs:      src/, test/
  default-language:    Haskell2010
  ghc-options:         -Wall
  type:                exitcode-stdio-1.0

source-repository head
    type:     git
    location: https://gitlab.com/fffaaa/scalpel-search
