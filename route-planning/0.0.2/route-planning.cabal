name:               route-planning
version:            0.0.2
license:            BSD3
license-File:       etc/LICENCE
author:             Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
maintainer:         Tony Morris
copyright:          Copyright (C) 2013 Tony Morris
synopsis:           A library and utilities for creating a route
category:           Data
description:        A library and utilities for creating a route
homepage:           https://github.com/tonymorris/route
bug-reports:        https://github.com/tonymorris/route/issues
cabal-version:      >= 1.10
build-type:         Custom

source-repository   head
  type:             git
  location:         git@github.com:tonymorris/route.git

flag                small_base
  description:      Choose the new, split-up base package.

library
  default-language:
                    Haskell2010

  build-depends:
                    base < 5 && >= 3
                    , lens >= 3.10
                    , coordinate >= 0.0.8
                    , containers >= 0.5.0.0
                    , semigroups >= 0.8
                    , semigroupoids >= 4.0
                    , xsd >= 0.5.0.1
                    , text >= 1.0

  ghc-options:
                    -Wall

  default-extensions:
                    NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    Data.Geo.Route
                    Data.Geo.Route.Author
                    Data.Geo.Route.Comment
                    Data.Geo.Route.Copyright
                    Data.Geo.Route.Description
                    Data.Geo.Route.Distance
                    Data.Geo.Route.Elevation
                    Data.Geo.Route.Email
                    Data.Geo.Route.Gpx
                    Data.Geo.Route.Link
                    Data.Geo.Route.Name
                    Data.Geo.Route.Osrm
                    Data.Geo.Route.Plan
                    Data.Geo.Route.Symbol
                    Data.Geo.Route.Track
                    Data.Geo.Route.TrackHeader
                    Data.Geo.Route.Waypoint

test-suite doctests
  type:
                    exitcode-stdio-1.0

  main-is:
                    doctests.hs

  default-language:
                    Haskell2010

  build-depends:
                    base < 5 && >= 3,
                    doctest >= 0.9.7,
                    filepath >= 1.3,
                    directory >= 1.1,
                    QuickCheck >= 2.0

  ghc-options:
                    -Wall
                    -threaded

  hs-source-dirs:
                    test


