  location: http://code.haskell.org/~thielema/bibtex/

Flag base2
  description: Choose the new smaller, split-up base package.

Flag buildExamples
  description: Build example executables
  default:     False

Library
  Build-Depends:
    latex >=0.1 && <0.2,
    parsec >=2.1 && <3.2,
    utility-ht >=0.0.5 && <0.1
  If flag(base2)
    Build-Depends:
      base >= 2 && <5
  Else
    Build-Depends:
      base >= 1.0 && < 2,
      special-functors >=1.0 && <1.1

  Default-Language: Haskell98
  GHC-Options:      -Wall
  Hs-Source-Dirs:   src
  Exposed-Modules:
    Text.BibTeX.Entry
    Text.BibTeX.Format
    Text.BibTeX.Parse


Executable       publication-overview
  If flag(buildExamples)
    Build-Depends:
      bibtex,
      parsec,
      base
  Else
    Buildable:      False

  Default-Language: Haskell98
  GHC-Options:      -Wall
  Main-Is:          demo/Publications.hs

Executable       hackage-bibtex
  If flag(buildExamples)
    Build-Depends:
      bibtex,
      latex,
      old-time >=1.0 && <1.2,
      Cabal >=3.6 && <3.11,
      tar >=0.3 && <0.6,
      utf8-string >=0.3.4 && <2,
      bytestring >=0.9 && <0.13,
      utility-ht,
      base
  Else
    Buildable:      False

  Default-Language: Haskell98
  GHC-Options:      -Wall
  Main-Is:          demo/Hackage.hs
