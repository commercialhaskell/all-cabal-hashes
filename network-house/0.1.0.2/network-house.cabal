name:                network-house
version:             0.1.0.2
license:             GPL-2
license-file:        LICENSE
author:              The House Authors
maintainer:          Niklas Hamb√ºchen <mail@nh2.me>
category:            Network
stability:           experimental
bug-reports:         https://github.com/nh2/network-house/issues
homepage:            https://github.com/nh2/network-house

build-type:          Simple
cabal-version:       >=1.8
synopsis:            data and parsers for Ethernet, TCP, UDP, IPv4, IPv6, ICMP, DHCP, TFTP
description:
                     The network stack extracted from the House (<https://code.google.com/p/pdxhouse/>) project.
                     .
                     Provides data structures and parsers for Ethernet, TCP, UDP, IPv4, IPv6, ICMP, DHCP and TFTP packets as well as some server implementations.
                     .
                     This package was extracted from house due to the lack of existing network package parsing libraries.

extra-source-files:
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/nh2/network-house

library
  exposed-modules:
      Net.ARP
    , Net.ARP_Protocol
    , Net.Bits
    , Net.ClientInterface
    , Net.Concurrent
    , Net.DHCP
    , Net.DHCP_Client
    , Net.Ethernet
    , Net.EthernetClient
    , Net.ICMP
    , Net.Interface
    , Net.IO
    , Net.IPv4
    , Net.IPv4Client
    , Net.IPv4Link
    , Net.IPv4OverEthernet
    , Net.IPv6
    , Net.Packet
    , Net.PacketParsing
    , Net.PortNumber
    , Net.Servers
    , Net.TCP
    , Net.TCP_Client
    , Net.Test
    , Net.TFTP
    , Net.TFTP_Client
    , Net.UDP
    , Net.UDP_Client
    , Net.Utils
    , Net.Wire
  other-modules:
    Monad.Util
  build-depends:
      base >= 4 && <= 5
    , array >= 0.4.0
    , containers >= 0.4.0
    , mtl >= 2.1.0
