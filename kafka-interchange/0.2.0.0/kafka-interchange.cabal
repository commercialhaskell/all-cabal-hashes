    Kafka.Parser
    Kafka.Builder
    Kafka.Builder.Bounded
  ghc-options:
    -Wall
    -O2
  build-depends:
    , base >= 4.11 && < 5
    , byteslice >= 0.1.1.0 && < 0.3.0.0
    , bytebuild >= 0.3.14
