    , castagnoli >= 0.2.0.1
    , chronos >= 1.1.5
    , containers >= 0.5
    , contiguous >= 0.6
    , ip >= 1.5.0 && < 1.8
    , mtl >= 2.2.2
    , primitive >= 0.9.0.0 && < 0.10
    , primitive-unaligned >= 0.1.1.0 && < 0.2.0.0
    , stm >= 2.5.0.0
    , text >= 2.0
    , text-short >= 0.1.5
    , torsor >= 0.1 && < 0.2
    , transformers >= 0.5 && < 0.7
    , bytestring >=0.11
    , natural-arithmetic >=0.1.3
    , zigzag >=0.0.1
    , wide-word >=0.1.5
  hs-source-dirs:
    src
  default-language:
    Haskell2010

