cabal-version:   2.4
name:            defun-sop
version:         0.1
license:         BSD-3-Clause
license-file:    LICENSE
author:          Oleg Grenrus <oleg.grenrus@iki.fi>
maintainer:      Oleg Grenrus <oleg.grenrus@iki.fi>
category:        Data
build-type:      Simple
extra-doc-files: CHANGELOG.md
tested-with:     GHC ==9.2.8 || ==9.4.8 || ==9.6.3 || ==9.8.1
synopsis:        Defunctionalization helpers: lists
description:
  This package provides term definitions for type families in "DeFun.List"
  using 'NP' type from @sop-core@ package.

source-repository head
  type:     git
  location: https://github.com/phadej/defun.git
  subdir:   defun-sop

common language
  default-language:   Haskell2010
  default-extensions:
    DataKinds
    EmptyCase
    GADTs
    KindSignatures
    NoImplicitPrelude
    PatternSynonyms
    PolyKinds
    RankNTypes
    ScopedTypeVariables
    StandaloneKindSignatures
    TypeApplications
    TypeFamilies
    TypeOperators
    UndecidableInstances
    ViewPatterns

library
  import:            language
  hs-source-dirs:    src
  exposed-modules:   Data.SOP.NP.DeFun
  build-depends:
    , base        ^>=4.16.3.0 || ^>=4.17.2.0 || ^>=4.18.0.0 || ^>=4.19.0.0
    , defun-core  ^>=0.1
    , sop-core    ^>=0.5.0.2

  x-docspec-options: -XDataKinds -XGADTs -XStandaloneDeriving
