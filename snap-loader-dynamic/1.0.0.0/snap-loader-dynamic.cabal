name:           snap-loader-dynamic
version:        1.0.0.0
synopsis:       Snap dynamic loader
description:    Snap Framework dynamic code loader for development mode
license:        BSD3
license-file:   LICENSE
author:         Carl Howells
maintainer:     snap@snapframework.com
build-type:     Simple
cabal-version:  >= 1.8
homepage:       http://snapframework.com/
category:       Web, Snap

extra-source-files:
  CONTRIBUTORS,
  LICENSE,
  README.md,
  README.SNAP.md

Library
  hs-source-dirs: src

  exposed-modules:
    Snap.Loader.Dynamic

  other-modules:
    Snap.Loader.Dynamic.Evaluator,
    Snap.Loader.Dynamic.Signal,
    Snap.Loader.Dynamic.TreeWatcher

  build-depends:
    base              >= 4       && < 5,
    directory-tree    >= 0.10    && < 0.13,
    mtl               >  2.0     && < 2.3,
    snap-core         >= 1.0     && < 1.1,
    time              >= 1.1     && < 1.7,
    template-haskell  >= 2.2     && < 2.12

  if impl(ghc >= 7.2.0)
    build-depends:
      hint              >= 0.3.3.1 && < 0.7
  else
    build-depends:
      hint              >= 0.3.3.1 && < 0.3.3.5

  if impl(ghc >= 7.6.0)
    build-depends:
      directory         >= 1.2     && < 1.3
  else
    build-depends:
      directory         >= 1.0     && < 1.3,
      old-time          >= 1.0     && < 1.2

  if !os(windows)
    build-depends:
      unix            >= 2.2.0.0 && < 2.8

  extensions: CPP

  if impl(ghc >= 6.12.0)
    ghc-options: -Wall -fwarn-tabs -funbox-strict-fields
                 -fno-warn-orphans -fno-warn-unused-do-bind
  else
    ghc-options: -Wall -fwarn-tabs -funbox-strict-fields
                 -fno-warn-orphans

source-repository head
  type:     git
  location: git://github.com/snapframework/snap-loader-dynamic.git

