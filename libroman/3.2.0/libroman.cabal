name:                libroman
version:             3.2.0
synopsis:            Use Roman Numerals as a Numeric Datatype (sort of)
description:         See Readme.md and Haddocks on Hackage
homepage:            https://ahakki.xyz
license:             BSD3
license-file:        LICENSE
author:              Alexander Hakki
maintainer:          ahk@ahakki.xyz
copyright:           2016-2024 Alexander Hakki
category:            Data, Math, Numerical
build-type:          Simple
cabal-version:       >=1.10

executable roman
  hs-source-dirs:      cli
  main-is:             Main.hs
  ghc-options:         -Wall
  default-language:    Haskell2010
  build-depends:       base
                    ,  libroman

library
  hs-source-dirs:      src
  exposed-modules:     Data.Roman
  other-modules:
  ghc-options:         -Wall
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , split

test-suite libroman-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , hspec
                     , QuickCheck
                     , libroman

source-repository head
  type:     git
  location: https://github.com/ahakki/libroman.git
