cabal-version: 1.18
name: egyptian-fractions
version: 0.1.0.0
license: BSD3
license-file: LICENSE
copyright: Copyright: (c) 2018 Vanessa McHale
maintainer: vanessa.mchale@iohk.io
author: Vanessa McHale
synopsis: Egyptian fractions in Haskell
description:
    Fibonacci's algorithm for computing Egyptian fractions.
category: Math
build-type: Simple
extra-doc-files: README.md

source-repository head
    type: darcs
    location: https://hub.darcs.net/vmchale/egyptian-fractions

flag development
    description:
        Enable `-Werror`
    default: False
    manual: True

library
    exposed-modules:
        Math.Eyptian
    hs-source-dirs: src
    default-language: Haskell98
    ghc-options: -Wall
    build-depends:
        base >=4.3 && <5
    
    if flag(development)
        ghc-options: -Werror
    
    if impl(ghc >=8.0)
        ghc-options: -Wincomplete-uni-patterns -Wincomplete-record-updates
                     -Wredundant-constraints -Wnoncanonical-monad-instances
    
    if impl(ghc >=8.4)
        ghc-options: -Wmissing-export-lists
