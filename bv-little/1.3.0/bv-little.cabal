Common language

  default-extensions:
    NoGeneralizedNewtypeDeriving
    
  default-language:
    GHC2021


Library

  import:
    language

  build-depends:
    base >= 4.16.1 && < 5,
    bv-little:core

  exposed-modules:
    Data.BitVector.LittleEndian

  hs-source-dirs:
    src


Library core

  import:
    language

  build-depends:
    base >= 4.16.1 && < 5,
    deepseq >= 1.4.6 && ^>= 1.4,
    hashable >= 1.3 && ^>= 1.4,
    integer-gmp ^>= 1.1,
    primitive ^>= 0.7.2,

