        criterion >= 1.1,
        entropy >= 0.3,
        ghc-prim >= 0.3,
        mwc-random >= 0.13,
        primitive >= 0.6,
        random >= 1.1,
        cryptonite >= 0.24

    if impl(ghc < 7.10)
        build-depends:
            nats >= 1.1

    if impl(ghc < 7.10)
        buildable: False

    if flag(with-pcg)
        build-depends:
            pcg-random >= 0.1

    other-modules:
        Benchmarks,
        Implementations

Benchmark eventlog-compare
    default-language: Haskell2010
    type: exitcode-stdio-1.0
    main-is: eventlog-compare.hs
    hs-source-dirs: benchmark
    ghc-options: -Wall -O2 -threaded -with-rtsopts=-N -rtsopts -eventlog
    build-depends:
