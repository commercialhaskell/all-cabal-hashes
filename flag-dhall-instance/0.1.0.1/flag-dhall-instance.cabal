cabal-version:      1.12
name:               flag-dhall-instance
version:            0.1.0.1
synopsis:           FromDhall and ToDhall instances for flag.
description:        FromDhall and ToDhall instances for flag.
category:           Data, Dhall
author:             Daniel Firth
maintainer:         dan.firth@homotopic.tech
copyright:          2023 Homotopic.Tech Ltd
license:            MIT
license-file:       LICENSE
build-type:         Simple
extra-source-files:
  ChangeLog.md
  README.md

source-repository head
  type:     git
  location: https://gitlab.homotopic.tech/haskell/flag-dhall-instance

library
  exposed-modules:    Data.Flag.Dhall
  hs-source-dirs:     src
  default-extensions:
    DataKinds
    DerivingStrategies

  ghc-options:
    -Weverything -Wno-all-missed-specialisations -Wno-implicit-prelude
    -Wno-missing-safe-haskell-mode -Wno-prepositive-qualified-module
    -Wno-safe -Wno-unsafe

  build-depends:
      base   >=4.7 && <5
    , dhall
    , flag

  default-language:   Haskell2010
