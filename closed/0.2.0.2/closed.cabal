cabal-version:      1.12
name:               closed
version:            0.2.0.2
license:            MIT
license-file:       LICENSE
maintainer:         Freckle Education <engineering@freckle.com>
author:             Chris Parks <chris@freckle.com>
homepage:           https://github.com/frontrowed/closed#readme
bug-reports:        https://github.com/frontrowed/closed/issues
synopsis:           Integers bounded by a closed interval
description:
    Integers bounded by a closed interval checked at compile time

category:           Data
build-type:         Simple
extra-source-files: README.lhs

source-repository head
    type:     git
    location: https://github.com/frontrowed/closed

library
    exposed-modules:
        Closed
        Closed.Internal

    hs-source-dirs:   library
    other-modules:    Paths_closed
    default-language: Haskell2010
    build-depends:
        QuickCheck >=2.11.3,
        aeson >=1.3.1.1,
        base >=4.9 && <5,
        cassava >=0.5.1.0,
        deepseq >=1.4.3.0,
        hashable >=1.2.7.0,
        persistent >=2.8.2,
        text >=1.2.3.1

test-suite readme
    type:             exitcode-stdio-1.0
    main-is:          README.lhs
    other-modules:    Paths_closed
    default-language: Haskell2010
    ghc-options:      -Wall -pgmL markdown-unlit
    build-depends:
        aeson >=1.3.1.1,
        base >=4.9 && <5,
        cassava >=0.5.1.0,
        closed -any,
        hspec >=2.5.5,
        markdown-unlit >=0.5.0,
        persistent >=2.8.2,
        text >=1.2.3.1,
        vector >=0.12.0.1
