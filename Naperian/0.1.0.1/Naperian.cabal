  build-depends:       base >= 4.10 && < 4.11
                     , containers
                     , ghc-prim
                     , vector
  
  -- Directories containing source files.
  hs-source-dirs:      src
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  
