  Other-Modules:
    Test.Piece
    Test.Sample
    Test.Overlap
  Hs-Source-Dirs:      test, private
  GHC-Options:         -Wall
  Build-Depends:
    interpolation,
    QuickCheck >=2.4 && <2.8,
    utility-ht >=0.0.9 && <0.1,
    array >=0.4 && <0.6,
    containers >=0.4 && <0.6,
    base >=4.5 && <4.8


