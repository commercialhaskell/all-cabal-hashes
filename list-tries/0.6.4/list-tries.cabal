                , template-haskell           >= 2.3 && < 2.13
                , HUnit                      >= 1.2 && < 1.7
                , QuickCheck                 >= 2.1 && < 2.10
                , test-framework             >= 0.2 && < 0.9
                , test-framework-hunit       >= 0.2 && < 0.4
                , test-framework-quickcheck2 >= 0.2 && < 0.4
                , ChasingBottoms             >= 1.2 && < 1.4

