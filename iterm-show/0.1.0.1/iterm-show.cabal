name:                iterm-show
version:             0.1.0.1
x-revision: 1
synopsis:            Enable graphical display of images inline on some terminals
description:         Enable graphical display of images inline on some terminals.
homepage:            https://github.com/luke-clifton/iterm-show
license:             BSD3
license-file:        LICENSE
author:              Luke Clifton
maintainer:          lukec@themk.net
copyright:           (c) 2018 Luke Clifton
category:            Development
build-type:          Simple
extra-source-files:
  ChangeLog.md,
  README.md,
  doc/*.png
cabal-version:       >=1.10
source-repository head
  type: git
  location: https://github.com/luke-clifton/iterm-show

library
  exposed-modules:     ITermShow
  other-extensions:    OverloadedStrings
  build-depends:
    base >= 4.9 && < 4.14,
    bytestring,
    base64-bytestring
  hs-source-dirs:      src
  default-language:    Haskell2010

executable it2-show
  build-depends:
    base >= 4.9 && < 4.14,
    bytestring,
    iterm-show
  main-is: it2-show.hs
  default-language: Haskell2010
