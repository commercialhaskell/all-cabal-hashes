-- Initial yesod-csp.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                yesod-csp
version:             0.2.4.0
synopsis:            Add CSP headers to Yesod apps
description:         Add CSP headers to Yesod apps. This helps reduce exposure to XSS attacks and bad assets.
license:             MIT
license-file:        LICENSE
author:              Bob Long
maintainer:          robertjflong@gmail.com
category:            Web
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/bobjflong/yesod-csp.git

library
  exposed-modules:     Yesod.Csp
                       , Yesod.Csp.Example
                       , Yesod.Csp.TH
  -- other-extensions:
  build-depends:       base < 5
                       , text
                       , yesod-core
                       , semigroups
                       , network-uri
                       , yesod
                       , mono-traversable
                       , attoparsec
                       , template-haskell
                       , syb
                       , wai
                       , case-insensitive
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite tests
  ghc-options:         -Wall
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  hs-source-dirs:      test
  build-depends:       base
                       , yesod-csp
                       , yesod-test
                       , semigroups
                       , yesod
                       , hspec
                       , network-uri
                       , attoparsec
                       , template-haskell
  default-language:    Haskell2010
