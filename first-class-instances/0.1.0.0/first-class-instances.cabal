cabal-version: 1.12
name: first-class-instances
version: 0.1.0.0
license: BSD3
license-file: LICENSE
copyright: 2019 Matej Nižník
maintainer: matten@tuta.io
author: Matej Nižník
synopsis: First class typeclass instances
description:
    See the README file in the project repository
category: Language
build-type: Simple
extra-source-files:
    README.md
    ChangeLog.md

source-repository head
    type: git
    location: https://gitlab.com/thematten/first-class-instances

library
    exposed-modules:
        FCI
        FCI.Control.Applicative
        FCI.Control.Monad
        FCI.Data.Functor
        FCI.Internal.Definitions
        FCI.Internal.TH
        FCI.Internal.Types
    hs-source-dirs: src
    other-modules:
        Paths_first_class_instances
    default-language: Haskell2010
    default-extensions: BlockArguments ConstraintKinds DataKinds
                        DuplicateRecordFields GADTs KindSignatures LambdaCase
                        MultiParamTypeClasses MultiWayIf NamedFieldPuns NoStarIsType
                        PatternSynonyms PolyKinds QuantifiedConstraints RankNTypes
                        RecordWildCards RoleAnnotations ScopedTypeVariables
                        TypeApplications TypeFamilies TypeFamilyDependencies TypeOperators
                        ViewPatterns
    ghc-options: -ferror-spans -Wall -Wincomplete-uni-patterns
                 -Wincomplete-record-updates -Wmissing-export-lists -Widentities
                 -Wredundant-constraints -Wpartial-fields -Wcompat
    build-depends:
        Cabal >=2.4.1.0 && <2.5,
        base >=4.7 && <5,
        containers >=0.6.0.1 && <0.7,
        template-haskell ==2.14.*

test-suite first-class-instances-test
    type: exitcode-stdio-1.0
    main-is: Spec.hs
    hs-source-dirs: test
    other-modules:
        FCISpec
        Paths_first_class_instances
    default-language: Haskell2010
    default-extensions: BlockArguments ConstraintKinds DataKinds
                        DuplicateRecordFields GADTs KindSignatures LambdaCase
                        MultiParamTypeClasses MultiWayIf NamedFieldPuns NoStarIsType
                        PatternSynonyms PolyKinds QuantifiedConstraints RankNTypes
                        RecordWildCards RoleAnnotations ScopedTypeVariables
                        TypeApplications TypeFamilies TypeFamilyDependencies TypeOperators
                        ViewPatterns
    ghc-options: -ferror-spans -Wall -Wincomplete-uni-patterns
                 -Wincomplete-record-updates -Wmissing-export-lists -Widentities
                 -Wredundant-constraints -Wpartial-fields -Wcompat -threaded
                 -rtsopts -with-rtsopts=-N
    build-depends:
        Cabal >=2.4.1.0 && <2.5,
        base >=4.7 && <5,
        containers >=0.6.0.1 && <0.7,
        first-class-instances -any,
        hspec >=2.7.1 && <3,
        hspec-discover >=2.7.1 && <3,
        template-haskell ==2.14.*
