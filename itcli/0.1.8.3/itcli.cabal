-- Initial itcli.cabal generated by cabal init.  For further documentation,
--  see http://haskell.org/cabal/users-guide/

name:                itcli
version:             0.1.8.3
synopsis:            Issue Tracker for the CLI
description:         This is a simplified issue tracker designed with the UNIX
                     philosophy in mind. It aims to have a similiar interface
                     to git
license:             BSD3
license-file:        LICENSE
author:              theNerd247
maintainer:          noah.harvey247 gm
-- copyright:           
category:            Development
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

executable itcli
  main-is:             Main.hs
  other-modules:       
      Data.ItCli
    , File
    , ItCli
    , Options
  -- other-extensions:    
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       
    base >=4.10 && <4.11
    , bytestring >= 0.10.8.1
    , directory >= 1.3.0.2
    , filepath >= 1.4.1.2
    , mtl >= 2.2.2
    , optparse-applicative >= 0.14.2.0
    , text >= 1.2.2.2
    , time >= 1.8.0.2
    , uuid >= 1.3.13
    , yaml >= 0.8.28
