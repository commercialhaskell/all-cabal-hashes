    type: exitcode-stdio-1.0
    main-is: Encoder.hs
    build-depends:
        base <4.10,
        deepseq <1.5,
        ghc-prim <0.6,
        lens <4.16,
        monad-logger <0.4,
        time <1.7,
        criterion <1.2,
        mediabus-fdk-aac <0.5,
        mediabus ==0.4.*,
        conduit <1.3,
        vector <13
