executable capnpc-haskell
    import: shared-opts
    main-is:              Main.hs
    other-modules:
        FrontEnd
      , IR
      , Backends.Common
      , Backends.Pure
      , Backends.Raw
      , Util
    hs-source-dirs:       exe/capnpc-haskell
    build-depends:
        capnp
      , binary                            ^>= 0.8.5
      , cereal                            ^>= 0.5.5
      , containers                        ^>= 0.5.10
      , directory                         ^>= 1.3.0
      , dlist                             ^>= 0.8.0
      , filepath                          ^>= 1.4.1
      , utf8-string                       ^>= 1.0.1
      , wl-pprint-text                    ^>= 1.2

