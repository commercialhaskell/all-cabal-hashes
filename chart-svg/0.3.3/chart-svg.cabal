    , attoparsec          >=0.13.2 && <0.15
    , base                >=4.7    && <5
    , Color               ^>=0.3
    , containers          ^>=0.6
    , cubicbezier         ^>=0.6
    , foldl               ^>=1.4
    , formatn             ^>=0.2
    , lucid               >=2.9 && <3
    , mtl                 >=2.2.2 && <2.4
    , neat-interpolation  ^>=0.5.1
    , numhask             ^>=0.10
    , numhask-array       ^>=0.10
    , numhask-space       ^>=0.10
    , optics-core         ^>=0.4
    , random              ^>=1.2.1
    , scientific          ^>=0.3
    , tagsoup             ^>=0.14
    , text                >=1.2 && <2.1
    , time                >=1.9 && <2
    , transformers        >=0.5 && <0.7

  default-language:   Haskell2010
  default-extensions: StrictData
  ghc-options:
    -Wall -Wcompat -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wredundant-constraints
