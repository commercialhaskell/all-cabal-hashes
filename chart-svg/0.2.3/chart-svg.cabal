  main-is:            reanimate-example.hs
  hs-source-dirs:     app
  build-depends:
    , base       >=4.7     && <5
    , chart-svg
    , lens       ^>=5.0
    , reanimate  ^>=1.1.1.0

  default-language:   Haskell2010
  default-extensions:
  ghc-options:
    -Wall -Wcompat -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wredundant-constraints
    -funbox-strict-fields -fwrite-ide-info -hiedir=.hie
    -Wunused-packages
