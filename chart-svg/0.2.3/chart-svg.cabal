  build-depends:
    , attoparsec            ^>=0.14
    , base                  >=4.7     && <5
    , Color                 ^>=0.3
    , containers            ^>=0.6
    , cubicbezier           ^>=0.6
    , foldl                 ^>=1.4
    , generic-lens          >=1.2     && <3.0
    , JuicyPixels           ^>=3.3
    , lens                  ^>=5.0
    , linear                ^>=1.21
    , lucid                 ^>=2.9
    , mtl                   ^>=2.2.2
    , numhask               ^>=0.8
    , numhask-space         ^>=0.8
    , reanimate             ^>=1.1.1.0
    , reanimate-svg         ^>=0.13
    , scientific            ^>=0.3
    , tagsoup               ^>=0.14
    , text                  ^>=1.2
    , time                  ^>=1.9
    , transformers          ^>=0.5
    , unordered-containers  ^>=0.2

  default-language:   Haskell2010
  default-extensions: StrictData
  ghc-options:
    -Wall -Wcompat -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wredundant-constraints -fwrite-ide-info
    -hiedir=.hie -Wunused-packages

