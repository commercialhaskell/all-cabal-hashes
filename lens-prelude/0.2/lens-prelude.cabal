name:                lens-prelude
version:             0.2
synopsis:            Alternate prelude that exports lens combinators
description:         Please see README.md
homepage:            https://github.com/andrewthad/lens-prelude
license:             BSD3
license-file:        LICENSE
author:              Andrew Martin
maintainer:          andrew.thaddeus@gmail.com
copyright:           2015 Andrew Martin
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
    hs-source-dirs:   src
    exposed-modules: Prelude.Base
                   , Prelude.Transformers.Strict
                   , Prelude.Transformers.Strict.Types
                   , Prelude.Transformers.Lazy.Types
                   , Prelude.MTL.Types 
                   , Prelude.MTL
                   , Prelude.Lens.BasicInfix
                   , Prelude.Containers.Types
                   , Prelude.Bitpacked.Types
                   , Prelude.Bitpacked.Module
                   , Prelude.Tertullian
                   , Prelude.Galileo
    build-depends: base >= 4.8 && < 5
                 , transformers
                 , lens
                 , either
                 , array
                 , containers
                 , unordered-containers
                 , hashable
                 , vector
                 , mtl
                 , time
                 , bytestring
                 , text
                 , contravariant
    ghc-options:      -Wall -fwarn-tabs -O2
    default-language:    Haskell2010
    default-extensions:  RankNTypes

