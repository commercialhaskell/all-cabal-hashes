name:                ast-monad-json
version:             0.1.0.0
x-revision: 3
synopsis:            A library for writing JSON
-- description:
homepage:            https://github.com/spica314/ast-monad-json#readme
license:             BSD3
license-file:        LICENSE
author:              Masato Mouri
maintainer:          8128jp@gmail.com
copyright:           2017 Masato Mouri
category:            Language
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Language.ASTMonad.Json
                     , Language.ASTMonad.Json.Renderer
  build-depends:       base >= 4.7 && < 5
                     , text
                     , ast-monad
  default-language:    Haskell2010

test-suite ast-monad-json-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , ast-monad
                     , ast-monad-json
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/spica314/ast-monad-json
