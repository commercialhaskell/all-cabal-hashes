Library
  Default-Language:     Haskell2010
  Build-Depends:        base == 4.*,
                        bytestring == 0.10.*,
                        containers == 0.5.*,
                        lifted-base == 0.2.*,
                        monad-control == 1.0.*,
                        transformers >= 0.3 && < 0.6,
                        transformers-base == 0.4.*,
                        unix
  Ghc-Options:          -Wall
  Exposed-Modules:      System.Posix.ACL
                        System.Posix.ACL.C
  Other-Modules:        System.Posix.ACL.Acl_h
  Extra-Libraries:      acl
