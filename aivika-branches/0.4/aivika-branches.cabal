                     mtl >= 2.1.1,
                     containers >= 0.4.0.0,
                     random >= 1.0.0.3,
                     mwc-random >= 0.13.1.0,
                     aivika >= 6.0.0,
                     aivika-transformers >= 6.0.0

    other-extensions:   TypeFamilies,
                        MultiParamTypeClasses,
                        FlexibleInstances,
                        BangPatterns

    ghc-options:     -O2

    default-language:   Haskell2010

