                    Distribution.MacOSX.Internal
  Build-depends:    base == 4.*
                    , HUnit
                    , test-framework
                    , test-framework-hunit
                    , temporary
                    , Cabal >= 1.6
                    , filepath
                    , process
                    , text
                    , containers
                    , directory