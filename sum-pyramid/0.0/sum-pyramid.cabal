    combinatorial,
    comfort-array,
    containers,
    transformers,
    utility-ht,
    base
  Default-Language:    Haskell2010
  GHC-Options:         -Wall
  Hs-Source-Dirs:      src, test
  Main-is:             TestMain.hs
  Other-Modules:
    Test.UniqueLogic
    Test.LinearAlgebra
    UniqueLogic
    LinearAlgebra
    Common
