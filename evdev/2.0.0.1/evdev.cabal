cabal-version:       3.0
name:                evdev
version:             2.0.0.1
author:              George Thomas
maintainer:          George Thomas
description:         Provides access to the Linux event device interface.
synopsis:            Bindings to libevdev
homepage:            https://github.com/georgefst/evdev
license:             BSD-3-Clause
license-file:        LICENSE
category:            System
extra-source-files:
    CHANGELOG.md
    README.md

source-repository head
    type: git
    location: git://github.com/georgefst/evdev.git

library
    exposed-modules:
        Evdev
        Evdev.Codes
    other-modules:
        Evdev.LowLevel
    hs-source-dirs: src
    c-sources:
        src-c/evdev-hs.c
    pkgconfig-depends:
        libevdev
    ghc-options:
        -Wall
    build-depends:
        base                 >= 4.11 && < 5,
        bytestring           ^>= 0.10,
        containers           ^>= 0.6.2,
        extra                ^>= {1.6.18, 1.7},
        monad-loops          ^>= 0.4.3,
        time                 ^>= {1.9.3, 1.10},
        unix                 ^>= 2.7.2,
    build-tool-depends:
        c2hs:c2hs
    default-language: Haskell2010
    default-extensions:
        DerivingStrategies
        FlexibleContexts
        GeneralizedNewtypeDeriving
        LambdaCase
        NumericUnderscores
        OverloadedStrings
        ScopedTypeVariables
        TupleSections
        ViewPatterns
