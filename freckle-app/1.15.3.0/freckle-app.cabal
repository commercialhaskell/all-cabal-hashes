    build-depends:
        Blammo >=1.1.2.0,
        QuickCheck >=2.14.3,
        aeson >=2.0.3.0,
        base >=4.16.4.0 && <5,
        bugsnag >=1.1.0.0,
        bytestring >=0.11.4.0,
        cassava >=0.5.3.0,
        conduit >=1.3.5,
        errors >=2.3.0,
        freckle-app,
        hspec >=2.9.7,
        hspec-expectations-json >=1.0.0.7,
        hspec-expectations-lifted >=0.10.0,
        http-types >=0.12.3,
        lens >=5.1.1,
        lens-aeson >=1.2.2,
        memcache >=0.3.0.1,
        monad-validate >=1.3.0.0,
        mtl >=2.2.2,
        nonempty-containers >=0.3.4.4,
        postgresql-simple >=0.6.4,
        text >=1.2.5.0,
        time >=1.11.1.1,
        unordered-containers >=0.2.19.1,
        vector >=0.12.3.1,
        wai >=3.2.3,
        wai-extra >=3.1.13.0,
        zlib >=0.6.3.0

    if impl(ghc >=9.8)
        ghc-options: -Wno-missing-role-annotations

    if impl(ghc >=9.2)
        ghc-options: -Wno-missing-kind-signatures
