  hs-source-dirs:      src
  exposed-modules:     JacobiRoots
  other-modules:       JacobiRootsBinary
  build-depends:       base >= 4 && < 5,
                       vector,
                       bytestring,
                       binary
  default-language:    Haskell2010
  ghc-options:         -O2

