Test-Suite test-haskore
  Type: exitcode-stdio-1.0
  Build-Depends:
    QuickCheck >=2 && <3,
    HUnit >=1.2 && <1.7,
    haskore,
    midi,
    event-list,
    non-negative,
    transformers,
    data-accessor,
    utility-ht,
    process,
    random,
    bytestring,
    base
  Default-Language: Haskell2010
  Hs-Source-Dirs: src/Test
  Main-Is: Suite.lhs
  Other-Modules:
    Equivalence
  GHC-Options: -Wall -rtsopts

Executable flipsong
  Default-Language: Haskell2010
  Main-Is: src/Haskore/Example/FlipTest.hs
  GHC-Options: -Wall
  If flag(buildExamples)
    Build-Depends:
      haskore,
      midi,
      bytestring,
      base
  Else
    Buildable: False

Executable autotrack
  Default-Language: Haskell2010
  Hs-Source-Dirs: src/Haskore/Interface/AutoTrack
  Main-Is: Main.lhs
  Other-Modules: Option
  GHC-Options: -Wall
  If flag(buildExamples)
    Build-Depends:
      haskore,
      bytestring,
      base
  Else
    Buildable: False
