  exposed-modules:
        Text.LambdaOptions,
        Text.LambdaOptions.Bool,
        Text.LambdaOptions.Core,
        Text.LambdaOptions.Formatter,
        Text.LambdaOptions.Keyword,
        Text.LambdaOptions.List,
        Text.LambdaOptions.Parseable

