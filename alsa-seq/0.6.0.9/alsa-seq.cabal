  Main-Is: dump.hs
  Hs-Source-Dirs: examples
  GHC-Options: -Wall -threaded
  Default-Language: Haskell2010
  Other-Modules: Common
  If flag(buildExamples)
    Build-Depends:
      alsa-seq,
      alsa-core,
      transformers,
      base
  Else
