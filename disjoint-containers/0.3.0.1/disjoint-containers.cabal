cabal-version:   2.4
name:            disjoint-containers
version:         0.3.0.1
synopsis:        Disjoint containers
description:     Disjoint containers.
homepage:        https://github.com/byteverse/disjoint-containers
bug-reports:     https://github.com/byteverse/disjoint-containers/issues
license:         BSD-3-Clause
license-file:    LICENSE
author:          Andrew Martin
maintainer:      amartin@layer3com.com
copyright:       2017 Andrew Martin
category:        Web
build-type:      Simple
extra-doc-files:
  CHANGELOG.md
  README.md

common build-settings
  default-language: Haskell2010
  ghc-options:      -Wall -Wunused-packages

library
  import:          build-settings
  hs-source-dirs:  src
  exposed-modules:
    Data.DisjointMap
    Data.DisjointSet

  build-depends:
    , base          >=4.11.1 && <5
    , containers    >=0.5    && <0.7
    , transformers  >=0.5    && <0.7

test-suite test
  import:         build-settings
  type:           exitcode-stdio-1.0
  hs-source-dirs: test
  main-is:        Spec.hs
  build-depends:
    , base
    , containers
    , disjoint-containers
    , enum-types
    , QuickCheck                 >=2.11
    , quickcheck-classes         >=0.5
    , quickcheck-enum-instances
    , tasty
    , tasty-quickcheck

test-suite doctest
  import:         build-settings
  type:           exitcode-stdio-1.0
  hs-source-dirs: test
  main-is:        Doctest.hs
  build-depends:
    , base
    , doctest  >=0.10

source-repository head
  type:     git
  location: git://github.com/byteverse/disjoint-containers.git
