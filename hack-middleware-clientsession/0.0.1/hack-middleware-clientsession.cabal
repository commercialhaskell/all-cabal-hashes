    build-depends:   base >= 4 && < 5,
                     hack,
                     clientsession >= 0.0.1,
                     old-locale,
                     time >= 1.1.3,
                     predicates,
                     web-encodings
    exposed-modules: Hack.Middleware.ClientSession
    ghc-options:     -Wall


