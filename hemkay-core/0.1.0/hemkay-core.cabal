Library
  Exposed-Modules:
    Sound.Hemkay
    Sound.Hemkay.Music
    Sound.Hemkay.Loader
    Sound.Hemkay.Mixer

  Build-Depends:  base >= 4 && < 5, array, bytestring, binary
  GHC-Options:    -Wall -O2
