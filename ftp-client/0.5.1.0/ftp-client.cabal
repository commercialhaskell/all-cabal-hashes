cabal-version: >=1.10
name: ftp-client
version: 0.5.1.0
license: PublicDomain
license-file: LICENSE
maintainer: mrobinson7627@gmail.com
author: Megan Robinson
homepage: https://github.com/mr/ftp-client
synopsis: Transfer files with FTP and FTPS
description:
    ftp-client is a library for communicating with an FTP server. It works over both a clear channel or TLS.
category: Web
build-type: Simple
extra-source-files:
    README.md

source-repository head
    type: git
    location: https://github.com/mr/ftp-client

library
    exposed-modules:
        Network.FTP.Client
    hs-source-dirs: src
    default-language: Haskell2010
    default-extensions: OverloadedStrings
    build-depends:
        base >=4.8 && <5,
        bytestring >=0.10.8.2 && <0.11,
        network >=2.6.3.6 && <2.7,
        attoparsec >=0.10 && <0.14,
        connection ==0.2.*,
        transformers >=0.5.5.0 && <0.6,
        exceptions >=0.10.0 && <0.11,
        containers >=0.5.11.0 && <0.6

test-suite ftp-client-test
    type: exitcode-stdio-1.0
    main-is: Spec.hs
    hs-source-dirs: test
    default-language: Haskell2010
    ghc-options: -threaded -rtsopts -with-rtsopts=-N
    build-depends:
        base >=4.11.1.0 && <4.12
