name:                servant-client-namedargs
version:             0.1.1.1
synopsis:            Automatically derive API client functions with named and optional parameters
-- description:
homepage:            https://gitlab.com/sciencei/servant-client-namedargs
bug-reports:         https://gitlab.com/sciencei/servant-client-namedargs/issues
license:             BSD3
license-file:        LICENSE
author:              Cullin Poresky
maintainer:          cporeskydev@gmail.com
-- copyright:
category:            Web
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md
cabal-version:       >=1.10

library
  exposed-modules: Servant.Client.NamedArgs
  -- other-modules:
  -- other-extensions:
  build-depends:       base                >= 4.11    && < 4.13
                     , servant             >= 0.16  && < 0.17
                     , servant-client-core >= 0.16  && < 0.17
                     , servant-namedargs   >= 0.1.1     && < 0.3
                     , named               >= 0.2     && < 0.3
                     , text                >= 1.2     && < 1.3
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: test/ClientServerEquivalency.hs
  build-depends:    base
                  , servant
                  , named
                  , servant-namedargs == 0.1.1.1
                  , servant-server-namedargs == 0.1.1.1
                  , servant-client-namedargs
                  , servant-server
                  , servant-client
                  , hspec >= 2.7 && < 2.8
                  , http-client >= 0.6.1 && < 0.7
                  , QuickCheck >= 2.12.6.1 && < 2.13
                  , async >= 2.2.1 && < 2.3
                  , warp >= 3.2.25 && < 3.3
  default-language:    Haskell2010
