name:       toml
version:    0.1.3
x-revision: 2
cabal-version: >= 1.2
build-type: Simple
license: BSD3
maintainer: TomMurphy <amindfv@mailbox.org>
description:
    Whiskey-driven YAML replacement.

library
    hs-source-dirs: src
    build-depends:
        base >= 4 && < 5,
        attoparsec >= 0.10 && < 0.13,
        containers >= 0.5 && < 0.6,
        bytestring >= 0.10 && < 0.11,
        time < 1.5,
        old-locale >= 1 && < 1.1

    exposed-modules:
        Text.TOML
        Text.TOML.Parser
        Text.TOML.Value
