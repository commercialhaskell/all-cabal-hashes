  build-depends:       base >=4.8 && <5,
                       text >=1.2 && <1.3,
                       bytestring >= 0.10,
                       parsec >=3.1 && <3.2,
                       containers >= 0.5,
                       data-default >= 0.7,
                       time >= 1.5
  -- hs-source-dirs:      
  default-language:    Haskell2010

source-repository head
  type: git
  location: https://github.com/portnov/text-format-heavy.git

