name:                lowlin
version:             0.1.0.0
license:             BSD3
license-file:        LICENSE
author:              Johannes Kropp
maintainer:          jodak932@gmail.com
copyright:           (c) Johannes Kropp 2020
cabal-version:       >= 1.10
build-type:          Simple
category:            Math, Linear Algebra
synopsis:            Low dimensional linear algebra
description:
    .
    Lowlin is a library for linear algebra in vector spaces up to a dimension of 4.
    .
    Simple Tuples can be used as vectors and nested tuples as matrices.

extra-source-files:
    CHANGELOG.md
    README.md

source-repository head
    type:       git
    location:   https://github.com/jdkr/lowlin

library
    default-language:    Haskell2010
    exposed-modules:
        Math.Lowlin
        Math.Lowlin.Types
        Math.Lowlin.Classes
        Math.Lowlin.Extra
    hs-source-dirs:
        src
    build-depends:
        base        >= 4.13.0 && < 4.14

test-suite lowlin-test
    default-language:    Haskell2010
    type: exitcode-stdio-1.0
    main-is: Main.hs
    other-modules:
        Test
        Math.LowlinSpec
        Math.LowlinData
    hs-source-dirs:
        test
    build-depends:
        lowlin
       ,base

