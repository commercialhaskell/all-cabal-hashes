name:                dmc
version:             1.0
build-type:          Simple
cabal-version:       >=1.10

synopsis:            cmd for common cases
description:         run shell commands from code
author:              Imants Cekusins
maintainer:          Imants Cekusins
category:            System, Command Line
license:             PublicDomain
license-file:        PublicDomain
extra-source-files:  changelog.md

homepage:            https://github.com/ciez/dmc
source-repository   head
   type: git
   location: https://github.com/ciez/dmc.git


library
  exposed-modules:
          System.Process.Dmc
          System.Process.TypeDmc
          
  ghc-options:  -fwarn-unused-imports  
    
  build-depends:       base >=4.8 && <5.0,
                process >= 1.3.0.0

  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:   
                       

test-suite spec
  default-language:Haskell2010
  type: exitcode-stdio-1.0
  ghc-options:  -fwarn-unused-imports
  hs-source-dirs: test, src
  default-extensions:   

  main-is: Main.hs
  other-modules:
          TestCase.TestCmd

  build-depends:  base >= 4.8,
                  hspec >= 2.1.7,
                  QuickCheck >= 2.8.1,
                  process >= 1.3.0.0,
                  dmc
