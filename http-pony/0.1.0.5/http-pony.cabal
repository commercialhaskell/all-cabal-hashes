name:                http-pony
version:             0.1.0.5
synopsis:            A type unsafe http library
license:             BSD3
license-file:        LICENSE
author:              Jinjing Wang
maintainer:          nfjinjing@gmail.com
category:            Network
build-type:          Simple
extra-source-files:  ChangeLog.md README.md
cabal-version:       >=1.10

Homepage:            https://github.com/nfjinjing/http-pony

library
  exposed-modules:     Network.HTTP.Pony.Type
                     , Network.HTTP.Pony.Serve
                     , Network.HTTP.Pony.ServeSafe
                     , Network.HTTP.Pony.Helper
  build-depends:       

                         base >=4.8 && < 5
                       , bytestring >=0.10
                       , network >=2.6
                       , pipes >=4.1
                       , pipes-network >=0.6
                       , pipes-safe >=2.2
                       , transformers >=0.4
                       , exceptions >= 0.8.3


                       -- , case-insensitive >= 1.2.0.7
                       -- , foreign-store >= 0.2
                       -- , http-pony-transformer-case-insensitive
                       -- , http-pony-transformer-http
                       -- , lens >= 4.14

  hs-source-dirs:      src
                       -- test
  default-language:    Haskell2010
