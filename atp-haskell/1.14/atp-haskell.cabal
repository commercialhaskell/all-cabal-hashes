    -- Data.Logic.ATP.Tactics

    -- Data.Logic.ATP.Limitations

Test-Suite atp-haskell-tests
  Type: exitcode-stdio-1.0
  Hs-Source-Dirs: tests
  Main-Is: Main.hs
  Build-Depends: atp-haskell, base, containers, HUnit, time
  GHC-options: -Wall -O2
