                        cbits/common.c
                        cbits/ftp.c
                        cbits/http.c
                        cbits/file.c
                        cbits/hs_download_utils.c

    include-dirs:       cbits
    includes:           download.h
                        common.h
                        ftperr.h
                        httperr.h
                        hs_download_utils.h

    install-includes:   common.h
                        download.h
                        ftperr.h
                        httperr.h
                        hs_download_utils.h
                                               
