cabal-version:       >=1.10

name:                multi-except
version:             0.3.0.0
synopsis:            Multiple Exceptions
description:         Exception type that supports reporting multiple exceptions
license:             MIT
license-file:        LICENSE
author:              Owen Shepherd
maintainer:          owen@owen.cafe
category:            Exceptions
build-type:          Simple
extra-source-files:  CHANGELOG.md
homepage:            https://github.com/414owen/multi-except

library
  exposed-modules:     Control.Applicative.MultiExcept
  build-depends:       base >=4.0 && <5
                     , dlist-nonempty
                     , semigroupoids
  default-language:    Haskell2010

test-suite unit-tests
  type:               exitcode-stdio-1.0
  hs-source-dirs:     test
  main-is:            Main.hs
  default-language:   Haskell2010
  other-modules:      Test.Functor
                    , Test.Applicative
                    , Test.Alt
                    , Test.Bifunctor
                    , Test.Foldable
                    , Test.Traversable
  build-depends:      base
                    , multi-except
                    , semigroupoids
                    , hspec
