                     example/regex/README.md,
                     example/regex/*.0rp,
                     example/regex/*.0rt,
                     example/regex/*.0rx,
                     example/tree/README.md,
                     example/tree/*.0rp,
                     example/tree/*.0rt,
                     example/tree/*.0rx,
                     lib/file/.zeolite-module,
                     lib/file/*.0rp,
                     lib/file/*.0rt,
                     lib/file/*.cpp,
                     lib/util/.zeolite-module,
                     lib/util/*.0rp,
                     lib/util/*.0rt,
                     lib/util/*.0rx,
                     lib/util/*.cpp,
                     tests/.zeolite-module,
                     tests/*.0rt,
                     tests/multiple-defs/README.md,
