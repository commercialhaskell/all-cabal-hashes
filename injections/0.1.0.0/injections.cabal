cabal-version:       2.4
name:                injections
version:             0.1.0.0
category: Data
synopsis:            Canonical categorical conversions (injections and projections)
description:
    Canonical injections and projections.
    See [README.md](https://github.com/ttuegel/injections#injections) for more details.
homepage:            https://github.com/ttuegel/injections
bug-reports:         https://github.com/ttuegel/injections/issues
license:             BSD-3-Clause
license-file:        LICENSE
author:              Thomas Tuegel
maintainer:          Thomas Tuegel <ttuegel@mailbox.org>
copyright:           2020 Thomas Tuegel
build-type:          Simple
extra-doc-files:     README.md
                     CHANGELOG.md

source-repository head
  type:                git
  location:            https://github.com/ttuegel/injections.git

common common-options
  build-depends:       base >= 4.12 && < 4.16

  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wredundant-constraints
                       -Wnoncanonical-monad-instances
  if impl(ghc >= 8.2)
    ghc-options:       -fhide-source-paths
  if impl(ghc >= 8.4)
    ghc-options:       -Wmissing-export-lists
                       -Wpartial-fields
  if impl(ghc >= 8.8)
    ghc-options:       -Wmissing-deriving-strategies
                       -fwrite-ide-info
                       -hiedir=.hie
  if impl(ghc >= 8.10)
    ghc-options:       -Wunused-packages

  default-language:    Haskell2010
  default-extensions:
    -- Required for library users:
    FlexibleContexts
    FlexibleInstances
    MultiParamTypeClasses
    -- Required for implementation only:
    EmptyCase
    LambdaCase
    ScopedTypeVariables
    TypeApplications

library
  import:              common-options
  hs-source-dirs:      src
  exposed-modules:
    Injection
    Projection
  build-depends:
    containers >= 0.5,
    text >= 1.2

test-suite injections-test
  import:              common-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:
    injections,
    hspec >= 2.7,
    QuickCheck >= 2.14,
    quickcheck-instances >= 0.3,
    containers,
    text,
  ghc-options:         -threaded
                       -rtsopts
                       -with-rtsopts=-N
  default-extensions:
    DerivingStrategies
