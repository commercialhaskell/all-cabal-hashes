library

  Build-Depends:     base >= 4 && < 5,
                     mtl,
                     process,
                     glib >= 0.11 && < 0.13,
                     gtk >= 0.11 && < 0.13,
                     hmatrix >= 0.10,
                     plot < 0.2

  Extensions:        

  hs-source-dirs:    lib

  Exposed-Modules:   Graphics.Rendering.Plot.Gtk
                     Graphics.Rendering.Plot.HMatrix
                     Graphics.UI.Gtk.Plot

  Other-modules:     

  ghc-options:       -Wall -fno-warn-unused-binds

  ghc-prof-options:  -auto

