cabal-version: 2.2
name:
  gw
version:
  0.1
synopsis:
  ghcWithPackages cmdline util
description:
  ghcWithPackages cmdline util. supports:
  . 
    * multiple ghc versions
  .  
    * pure/impure nix-shell
  .   
    * entering shell with multiple packages available
   
homepage:
  https://github.com/chessai/gw
bug-reports:
  https://github.com/chessai/gw/issues
license:
  BSD-3-Clause
license-file:
  LICENSE
author:
  chessai
maintainer:
  chessai <chessai1996@gmail.com>
copyright:
  Â© 2019 chessai
category:
  Utility
build-type:
  Simple
extra-doc-files:
    README.md
  , CHANGELOG.md
tested-with:
  GHC == 8.2.2, GHC == 8.4.4, GHC == 8.6.3

executable gw
  hs-source-dirs:
    app
  main-is:
    Main.hs
  build-depends:
    , base >= 4.10.1 && < 4.13
    , unix >= 2.7 && < 2.8
  ghc-options:
    -Wall
  default-language:
    Haskell2010

source-repository head
  type:
    git
  location:
    https://github.com/chessai/gw.git
