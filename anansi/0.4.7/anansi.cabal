  ghc-options: -Wall -O2

  build-depends:
      base >= 4.0 && < 5.0
    , bytestring >= 0.9
    , containers >= 0.1
    , monads-tf >= 0.1 && < 0.2
    , options >= 1.0 && < 2.0
    , parsec >= 3.0 && < 3.2
    , system-argv0 >= 0.1 && < 0.2
    , system-filepath >= 0.3.1 && < 0.5
    , system-fileio >= 0.2.1 && < 0.4
    , text >= 0.7

