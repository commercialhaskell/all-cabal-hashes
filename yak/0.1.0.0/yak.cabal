name:                yak
version:             0.1.0.0
synopsis:            A strongly typed IRC library
description:         See README.rst
homepage:            https://github.com/tsahyt/yak#readme
license:             MIT
license-file:        LICENSE
author:              Paul Ogris
maintainer:          paul@tsahyt.com
copyright:           2018 Paul Ogris
category:            Network
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Network.Yak
                       Network.Yak.Capabilities
                       Network.Yak.Client
                       Network.Yak.Modes
                       Network.Yak.Responses
                       Network.Yak.TH
                       Network.Yak.Types
  build-depends:       base >= 4.7 && < 5,
                       text >= 1.2 && < 1.3,
                       bytestring >= 0.10 && < 0.11,
                       lens >= 4.16 && < 5,
                       attoparsec >= 0.13 && < 0.14,
                       template-haskell >= 2.12,
                       time >= 1.8 && < 2
  ghc-options:         -Wall
  default-language:    Haskell2010

test-suite yak-tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  build-depends:       base >= 4.7 && < 5,
                       yak,
                       hspec,
                       bytestring
  ghc-options:         -Wall
  default-language:    Haskell2010

source-repository head
  type:                git
  location:            https://github.com/tsahyt/yak
