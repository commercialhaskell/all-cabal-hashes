  main-is:            Seqaid/Demo.hs
--other-modules:
--other-extensions:

  build-depends:
      base == 4.*
    , temporary == 1.2.*
    , directory == 1.2.*
-- Finally needed to drop to 1.* for testing GHC 7.6.3!
