cabal-version:       2.4
name:                symbolic-link
version:             0.1.1.1
synopsis:            Symlink functions
description:
  SymbolicLink provides functions for working with symbolic links.

homepage:            https://github.com/fuzz/symbolic-link
license:             BSD-3-Clause
license-file:        LICENSE
author:              Fuzz Leonard
maintainer:          fuzz@kt-22.com
category:            System
extra-source-files:
    CHANGELOG.markdown
  , README.markdown

source-repository head
  type: git
  location: git@github.com:fuzz/symbolic-link.git

source-repository this
  type: git
  location: git@github.com:fuzz/symbolic-link.git
  tag: 0.1.1.1

library
  exposed-modules:
    System.SymbolicLink
  build-depends:
      base ^>=4.12.0.0
    , directory ^>=1.3.3.0
    , unix ^>=2.7.2.2
  hs-source-dirs:
    src
  default-language:
    Haskell2010

test-suite test
  default-language:
    Haskell2010
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    tests
  main-is:
    test.hs
  build-depends:
      base ^>=4.12.0.0
    , symbolic-link >=0.1.1.1
    , tasty >=1.2.3
    , tasty-hunit >=0.10.0.2
    , unix ^>=2.7.2.2
