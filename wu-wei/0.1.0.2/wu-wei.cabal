cabal-version:       2.4
name:                wu-wei
version:             0.1.0.2
synopsis:            Unimportant Unix adminstration tool
description:
  Minimalist tool for Unix systems administration that strives to be
  unimportant and do nothing, like water.
homepage:            https://github.com/fuzz/wu-wei
-- bug-reports:
license:             BSD-3-Clause
license-file:        LICENSE
author:              Fuzz Leonard
maintainer:          fuzz@kt-22.com
-- copyright:
category:            System
extra-source-files:
    CHANGELOG.markdown
  , README.markdown
  , examples/macos.pao

source-repository head
  type: git
  location: git@github.com:fuzz/wu-wei.git

source-repository this
  type: git
  location: git@github.com:fuzz/wu-wei.git
  tag: 0.1.0.2

executable pao
  main-is:             Main.hs
  other-extensions: DeriveGeneric
  build-depends:
      base ^>=4.12.0.0
    , directory ^>=1.3.3.0
    , symbolic-link ^>=0.1.0.2
    , unix ^>=2.7.2.2
    , yaml^>=0.11.1.0
  hs-source-dirs:      src
  default-language:    Haskell2010
