                       , base >= 4.8 && < 5
                       , containers >= 0.5 && < 0.6
                       , filepath
                       , ghc-paths >= 0.1 && < 0.2
                       , ghc
                       , hashable
                       , hpc
                       , tagged
                       , tasty >= 1.0
                       , tasty-hunit >= 0.10
                       , text
                       , time >= 1.6
                       , unordered-containers
  default-language:    Haskell2010
  hs-source-dirs:      tests
  main-is:             Test.hs
  other-modules:         CaseTest
                       , DefuncTest
                       , Expr
                       , GetNthTest
                       , HigherOrderMathTest
                       , InputOutputTest
                       , PeanoTest
                       , Reqs
                       , TestUtils
                       , Typing
  ghc-options:         -Wall
                       -- -fprof-auto "-with-rtsopts=-p"
                       -threaded
  type:                exitcode-stdio-1.0
