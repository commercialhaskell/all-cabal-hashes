cabal-version:      2.4
name:               svgsym
version:            0.1.0.0
synopsis:           A tool to prune unused symbols from icon SVG files.
homepage:           https://git.sr.ht/~rycee/svgsym
bug-reports:        https://lists.sr.ht/~rycee/public-inbox
license:            GPL-3.0-or-later
license-file:       LICENSE
author:             Robert Helgesson
maintainer:         robert@rycee.net
copyright:          (c) 2022 Robert Helgesson
category:           Utility
extra-source-files:
  CHANGELOG.md
  README.md

executable svgsym
  main-is:          Main.hs
  autogen-modules:  Paths_svgsym
  other-modules:
    Paths_svgsym
    Svgsym.Options

  build-depends:
    , base                  ^>=4.15.1
    , bytestring            ^>=0.10
    , containers            ^>=0.6
    , directory             ^>=1.3
    , filepath              ^>=1.4
    , filepattern           ^>=0.1.2
    , optparse-applicative  ^>=0.16
    , regex-tdfa            ^>=1.3.1
    , xml                   ^>=1.3

  hs-source-dirs:   src-exe
  default-language: Haskell2010
