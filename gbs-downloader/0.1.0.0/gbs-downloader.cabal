  import:
    warnings
    , language

  main-is:          Main.hs
  build-depends:
    , aeson           >=1.4.7    && <2.2
    , base            >=4.7      && <5
    , bytestring      >=0.10.8.2 && <0.11
    , containers      >=0.6.0.1  && <0.7
    , gbs-downloader
    , megaparsec      >=8.0      && <9.3
