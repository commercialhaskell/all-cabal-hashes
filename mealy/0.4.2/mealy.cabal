    Data.Mealy
    Data.Mealy.Quantiles
    Data.Mealy.Simulate

  hs-source-dirs:   src
  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wredundant-constraints

