    , numhask            ^>=0.8.1
    , numhask-array      ^>=0.9.1
    , primitive          ^>=0.7.2
    , profunctors        ^>=5.6.2
    , tdigest            ^>=0.2.1
    , text               ^>=1.2.4
    , vector             ^>=0.12.3
    , vector-algorithms  ^>=0.8.0
