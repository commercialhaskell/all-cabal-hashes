        Factory.Test.QuickCheck.Radix
        Factory.Test.QuickCheck.SquareRoot
        Factory.Test.QuickCheck.Statistics
        Factory.Test.QuickCheck.Summation

    Build-depends:
        Cabal >= 1.6 && < 2,
        QuickCheck >= 2.2

    GHC-options:	-Wall -O2 -fno-warn-tabs
