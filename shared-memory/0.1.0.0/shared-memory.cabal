name:                shared-memory
version:             0.1.0.0
license:             MIT
author:              Niklas Hambüchen <mail@nh2.me>
maintainer:          Niklas Hambüchen <mail@nh2.me>
build-type:          Simple
cabal-version:       >=1.8
homepage:            https://github.com/nh2/shared-memory
bug-reports:         https://github.com/nh2/shared-memory/issues
synopsis:            POSIX shared memory
description:
  POSIX shared memory library.


library
  exposed-modules:
    MMAP
    SharedMemory
  build-tools:
    hsc2hs
  build-depends:
      base                          >= 4.5     && < 5
    , unix                          >= 2.6     && < 2.8
  ghc-options:
    -Wall


test-suite test-shared-memory-example
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    test
  main-is:
    Main.hs
  build-depends:
      base
    , shared-memory
    , bytestring
    , unix
  ghc-options:
    -Wall
