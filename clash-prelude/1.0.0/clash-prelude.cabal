test-suite doctests
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  main-is:          doctests.hs
  ghc-options:      -Wall -threaded
  hs-source-dirs:   tests

  if !flag(doctests)
    buildable: False
  else
    build-depends:
      base,
      doctest >= 0.9.1 && < 0.17,
      clash-prelude
  if impl(ghc >= 8.6)
    build-depends:
      doctest >= 0.16.1

test-suite unittests
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  main-is:          unittests.hs
  ghc-options:      -Wall
  hs-source-dirs:   tests

  if !flag(unittests)
    buildable: False
  else
    build-depends:
      clash-prelude,

      ghc-typelits-knownnat,

      base,
      hint          >= 0.7      && < 0.10,
      tasty         >= 1.2      && < 1.3,
      tasty-hunit

