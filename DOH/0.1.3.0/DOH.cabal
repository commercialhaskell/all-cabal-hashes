                       mtl,
                       text,
                       http-client,
                       http-types,
                       http-client-tls,
                       bytestring,
                       network-uri,
                       aeson,
                       aeson-casing,
                       time,
                       lens,
                       containers,
                       filepath,
                       unordered-containers
