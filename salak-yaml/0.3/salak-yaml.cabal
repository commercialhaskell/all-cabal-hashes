cabal-version: 1.12
name: salak-yaml
version: 0.3
x-revision: 1
license: BSD3
license-file: LICENSE
copyright: (c) 2018 Daniel YU
maintainer: Daniel YU <leptonyu@gmail.com>
author: Daniel YU
homepage: https://github.com/leptonyu/salak#readme
synopsis: Configuration Loader for yaml
category: Library, Configuration
build-type: Simple
extra-source-files:
    README.md
    test/salak.yml

library
    exposed-modules:
        Salak.Yaml
    hs-source-dirs: src
    other-modules:
        Paths_salak_yaml
    default-language: Haskell2010
    ghc-options: -Wall -fno-warn-orphans -fno-warn-missing-signatures
    build-depends:
        base >=4.10 && <4.13,
        conduit >=1.3.1.1 && <1.4,
        libyaml >=0.1.1.0 && <0.2,
        salak ==0.3.1,
        text >=1.2.3.1 && <1.3

test-suite spec
    type: exitcode-stdio-1.0
    main-is: Spec.hs
    hs-source-dirs: test src
    other-modules:
        Salak.Yaml
        Paths_salak_yaml
    default-language: Haskell2010
    ghc-options: -Wall -fno-warn-orphans -fno-warn-missing-signatures
    build-depends:
        QuickCheck >=2.13.2 && <2.14,
        base >=4.10 && <5,
        conduit >=1.3.1.1 && <1.4,
        exceptions >=0.10.2 && <0.11,
        hspec ==2.*,
        libyaml >=0.1.1.0 && <0.2,
        mtl >=2.2.2 && <2.3,
        salak ==0.3.*,
        text >=1.2.3.1 && <1.3
