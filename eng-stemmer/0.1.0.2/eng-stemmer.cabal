name:                eng-stemmer
version:             0.1.0.2
synopsis:            An English language stemmer (Porter2)
description:         This i
homepage:            https://github.com/ChrisCoffey/eng-stemmer
license:             BSD3
license-file:        LICENSE
author:              Chris Coffey
maintainer:          chris@foldl.io
category:            NLP, Stemming
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Text.Stemming.English
  other-modules:       Data.Text.Stemming.Constants.English
  build-depends:       base >= 4.7 && < 5
                     , text
                     , mtl
                     , containers
  default-language:    Haskell2010

executable eng-stemmer-example
  hs-source-dirs:      app
  main-is:             Example.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , eng-stemmer
                     , text
                     , containers
  default-language:    Haskell2010

test-suite eng-stemmer-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Tests.hs
  build-depends:       base
                     , eng-stemmer
                     , containers
                     , text
                     , doctest
                     , tasty
                     , tasty-hunit
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/ChrisCoffey/eng-stemmer
