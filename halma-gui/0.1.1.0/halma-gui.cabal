name: halma-gui
version: 0.1.1.0
synopsis: GTK application for playing Halma
description: Play Halma (aka Chinese Checkers) on your desktop against your friends or an AI
homepage: https://github.com/timjb/halma
license: MIT
license-file: LICENSE
author: Tim Baumann
maintainer: tim@timbaumann.info
copyright: 2015-2017 Tim Baumann
category: Game
build-type: Simple
cabal-version: >= 1.10

source-repository head
  type: git
  location: https://github.com/timjb/halma.git

Executable halma-gui
  Ghc-options: -threaded -Wall
  default-language: Haskell2010
  Hs-source-dirs: src
  main-is: Main.hs
  other-modules:
    Game.Halma.GUI.State
  build-depends:
    halma >= 0.3.0.0,
    base >= 4.6 && < 5,
    diagrams-gtk >= 1.0.1.3 && < 1.5,
    gtk >= 0.13.4 && < 0.15,
    mtl,
    diagrams-lib >= 1.3,
    diagrams-cairo,
    pipes >= 4.1.4 && < 4.4,
    mvc >= 1.0.3 && < 1.2,
    async >= 2.0.2 && < 2.2,
    data-default,
    timeit >= 1.0 && < 1.1