name:                morphisms-functors
version:             0.1.3
synopsis:            Functors, theirs compositions and transformations
description:         Attempt to define categorical abstractions in more robust and useful way.
homepage:            https://github.com/iokasimov/morphisms-functors
license:             MIT
license-file:        LICENSE
extra-source-files:  CHANGELOG.md
author:              Murat Kasimov
maintainer:          Murat Kasimov <iokasimov.m@gmail.com>
copyright:           Copyright (c) 2018 Murat Kasimov
category:            Data, Control
build-type:          Simple
cabal-version:       >= 1.10

source-repository head
  type: git
  location: https://github.com/iokasimov/morphisms-functors.git

library
  build-depends: morphisms == 0.1.0
  exposed-modules:
    Control.Functor.Contravariant,
    Control.Functor.Covariant,
    Control.Functor.Invariant,
    Control.Functor.Alternative,
    Control.Functor.Applicative,
    Control.Functor.Pointable,
    Control.Functor.Extractable,
    Control.Functor.Exclusive,
    Control.Functor.Composition,
    Control.Functor.Composition.Adjoint,
    Control.Functor.Composition.Traversable,
    Control.Functor.Composition.Distributive,
    Control.Functor.Composition.Bindable,
    Control.Functor.Composition.Extendable,
    Control.Functor.Composition.Monad,
    Control.Functor.Composition.Comonad,
    Control.Transformation.Natural,
    Control.Functor.Basic.Constant,
    Control.Functor.Basic.Identity,
    Control.Functor.Basic.T,
    Control.Functor.Basic.TT,
    Control.Functor.Basic.TTT
  default-extensions:
    DataKinds
    ConstraintKinds
    FlexibleInstances
    FunctionalDependencies
    KindSignatures
    LiberalTypeSynonyms
    MultiParamTypeClasses
    NoImplicitPrelude
    PackageImports
    PolyKinds
    RankNTypes
    TypeFamilies
    TypeOperators
    TypeSynonymInstances
  default-language: Haskell2010
  ghc-options: -fno-warn-tabs
