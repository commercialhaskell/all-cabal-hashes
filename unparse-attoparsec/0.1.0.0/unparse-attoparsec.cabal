name:                unparse-attoparsec
version:             0.1.0.0
synopsis:            An attoparsec roundtrip
description:
  DRY applicative and monadic @attoparsec@ (un)parsers.

  See README below.
homepage:            https://github.com/Lysxia/unparse-attoparsec#readme
license:             MIT
license-file:        LICENSE
author:              Li-yao Xia
maintainer:          lysxia@gmail.com
category:            Text, Parsing
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:
    Data.Attoparsec.Unparse
    Data.Attoparsec.Unparse.Printer
    Data.Attoparsec.Unparse.Profunctor
  build-depends:
    attoparsec,
    base >= 4.9 && < 4.13,
    bytestring,
    mtl,
    profunctors
  default-language:    Haskell2010
  ghc-options: -Wall -Wno-name-shadowing

test-suite example-aeson
  type: exitcode-stdio-1.0
  hs-source-dirs: example
  main-is: aeson.hs
  other-modules:
    AesonParser
  default-language: Haskell2010
  ghc-options: -Wall -Wno-name-shadowing
  build-depends:
    aeson,
    base,
    bytestring,
    constraints,
    mtl,
    profunctors,
    scientific,
    text,
    unordered-containers,
    unparse-attoparsec,
    vector

test-suite example-regex
  type: exitcode-stdio-1.0
  hs-source-dirs: example
  main-is: regex.hs
  default-language: Haskell2010
  ghc-options: -Wall -Wno-name-shadowing
  build-depends:
    base,
    bytestring,
    profunctor-monad,
    unparse-attoparsec

source-repository head
  type:     git
  location: https://github.com/Lysxia/unparse-attoparsec
