  type: exitcode-stdio-1.0

  hs-source-dirs: test
  main-is: Test.hs

  build-depends:
                  QuickCheck >= 2.1.2 && < 2.15,
                  test-framework-quickcheck2 >= 0.2.5 && < 0.4,
                  HUnit >= 1.2 && < 1.7,
                  test-framework-hunit >= 0.2.0 && < 0.4,
                  test-framework >= 0.2.0 && < 0.9,
                  bytestring >= 0.9.1.5 && < 0.12,
                  base >= 4.2 && < 4.15,
                  bytestring-handle
