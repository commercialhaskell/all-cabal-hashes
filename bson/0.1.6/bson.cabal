                   time,
                   bytestring,
                   network < 2.9,
                   cryptohash,
                   binary,
                   data-binary-ieee754,
                   compact-string-fix,
                   mtl >= 2

    Exposed-modules: Data.UString,
                     Data.Bson,
                     Data.Bson.Binary

    ghc-prof-options: -auto-all

