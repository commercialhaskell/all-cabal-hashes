                    , test-framework-quickcheck2 >= 0.2
                    , QuickCheck                 >= 2.4
                    -- Copied from regular dependencies...
                    , base < 5
                    , time
                    , bytestring
                    , binary >= 0.5 && < 0.9
                    , cryptohash
                    , data-binary-ieee754
                    , mtl >= 2
                    , network
                    , text >= 0.11
  Default-Language: Haskell2010
  Default-Extensions: CPP
