  default-language: Haskell2010
  hs-source-dirs:   src
  build-depends:
    base        >= 4.12 && < 5,
    sdp         >= 0.2  && < 0.3,
    QuickCheck  >= 2.12 && < 3
  
  ghc-options: -Wall -Wno-orphans
  
  exposed-modules:
    Test.SDP.Arbitrary
    Test.SDP.Estimate
    Test.SDP.Indexed
    Test.SDP.Linear
    Test.SDP.Split
    Test.SDP.Index
    Test.SDP.Sort
    Test.SDP.Set
