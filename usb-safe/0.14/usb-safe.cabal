               , iteratee                  >= 0.4   && < 0.9
               , bytestring                >= 0.9   && < 0.10
               , text                      >= 0.5   && < 0.12
               , regions                   >= 0.11  && < 0.12
               , transformers              >= 0.2   && < 0.3
  exposed-modules: System.USB.Safe
  other-modules:   System.USB.Safe.Iteratee

  if impl(ghc>7) && !os(windows)
    cpp-options: -DHAS_EVENT_MANAGER
