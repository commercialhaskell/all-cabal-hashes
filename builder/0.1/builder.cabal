cabal-version: 2.2
name:
  builder
version:
  0.1
synopsis:
  bounded ByteArray builder type
description:
  A Builder type for ByteArray. Appending these builders
  can be cheaper than when appending ByteArray values, since
  only one buffer allocation is performed.
homepage:
  https://github.com/chessai/builder
bug-reports:
  https://github.com/chessai/builder/issues
license:
  BSD-3-Clause
license-file:
  LICENSE
author:
  chessai
maintainer:
  chessai <chessai1996@gmail.com>
copyright:
  Â© 2019 chessai
category:
  Data
build-type:
  Simple
extra-doc-files:
    README.md
  , CHANGELOG.md
tested-with:
  GHC == 8.6.5

library
  hs-source-dirs:
    src
  exposed-modules:
    Builder
  build-depends:
    , base >= 4.11 && < 4.14
    , byte-order >= 0.1.1 && < 0.2
    , primitive >= 0.6.4 && < 0.8
    , primitive-unaligned >= 0.1 && < 0.2
  ghc-options:
    -Wall
    -O2
  default-language:
    Haskell2010

source-repository head
  type:
    git
  location:
    https://github.com/chessai/builder.git
