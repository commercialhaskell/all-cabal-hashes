name:                rings
version:             0.0.2
synopsis:            Rings, semirings, and dioids.
description:         Lawful versions of the numeric typeclasses in base.
homepage:            https://github.com/cmk/rings
license:             BSD3
license-file:        LICENSE
author:              Chris McKinlay
maintainer:          chris.mckinlay@gmail.com
category:            Math, Numerical
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:
      Data.Dioid
    , Data.Dioid.Interval
    , Data.Dioid.Property
    , Data.Dioid.Signed
    , Data.Group
    , Data.Ring
    , Data.Semigroup.Orphan
    , Data.Semigroup.Quantale
    , Data.Semiring
    , Data.Semiring.Property
  default-extensions:
      ScopedTypeVariables
    , TypeApplications
    , MultiParamTypeClasses
    , UndecidableInstances
    , FlexibleInstances

  build-depends:       
      base           >= 4.10  && < 5.0
    , containers     >= 0.4.0 && < 0.7
    , semigroupoids  == 5.*
    , property       >= 0.0.1 && < 1.0
    , connections    >= 0.0.2 && < 1.0
    , contravariant  >= 1     && < 2

  hs-source-dirs: src
  default-language: Haskell2010

test-suite test
  type: exitcode-stdio-1.0
  other-modules:
      Test.Data.Dioid.Signed
  build-depends:       
      base == 4.*
    , connections -any 
    , hedgehog
    , property
    , rings
  default-extensions:
      ScopedTypeVariables,
      TypeApplications
  main-is: test.hs
  hs-source-dirs: test
  default-language: Haskell2010
  ghc-options: -threaded -rtsopts -with-rtsopts=-N -Wall
