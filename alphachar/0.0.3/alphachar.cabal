source-repository   head
  type:             git
  location:         git@github.com:qfpl/alphachar.git

library
  default-language:
                    Haskell2010

  build-depends:
                    base               >= 4.7 && < 4.13
                    , lens             >= 4.0 && < 5
                    , parsers          >= 0.12.3 && < 0.13
                    , semigroups       >= 0.12 && < 1.0
                    
  ghc-options:
                    -Wall

  default-extensions:
                    NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    Data.Char.Alpha

test-suite tests
  type:
                    exitcode-stdio-1.0

  main-is:
                    Main.hs

  default-language:
                    Haskell2010

  build-depends:
                    base             >=4.8    && <4.13
                    , lens           >=4.0    && <5
                    , ansi-wl-pprint >=0.6    && <0.7
                    , hedgehog       >=0.5    && <0.7
                    , tasty          >=0.11   && <1.2
                    , tasty-hspec    >=1.1    && <1.2
                    , parsec         >=3.1    && <3.2
                    , parsers        >=0.12.3 && <0.13
                    , pretty         >=1.1    && <1.2
                    , text           >=1.2    && <1.3
                    , tasty-hedgehog >=0.1    && <0.3
                    , tasty-hunit    >=0.9    && <0.11
                    , alphachar

  ghc-options:
                    -Wall
                    -threaded

  default-extensions:
                    NoImplicitPrelude

  hs-source-dirs:
                    test
