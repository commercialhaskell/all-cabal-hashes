name: gmail-simple
version: 0.1.0.6
synopsis: Simple library for Google Mail (GMail).
description:
  Easy-to-use library to interact with the Google Mail API.
  .
  Currently only supporting sending mails.
category: Email, Google
license: BSD3
license-file: LICENSE
homepage: https://gitlab.com/daniel-casanueva/haskell/gmail-simple
maintainer: Daniel Casanueva
build-type: Simple
cabal-version: 1.18
extra-doc-files: README.md, changelog.md

library
  default-language: Haskell2010
  hs-source-dirs: src
  ghc-options: -Wall -Wunused-packages
  build-depends:
      base < 5
    , jwt
    , http-conduit
    , text
    , time
    , unordered-containers
    , aeson
    , base64
    , http-media
    , bytestring
    , cryptonite
    , containers
    , http-api-data
    , blaze-html
  exposed-modules:
    Network.GMail.Simple
