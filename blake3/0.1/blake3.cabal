test-suite test
  import: basic
  ghc-options: -Wall -Werror=incomplete-patterns -O2
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Main.hs
  build-depends:
    blake3,
    memory,
    tasty,
    tasty-hunit,
