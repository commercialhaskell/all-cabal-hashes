  HS-Source-Dirs:       src
  GHC-Options:          -Wall
  Exposed-Modules:      Lucid.Foundation
  Other-Modules:        Lucid.Foundation.Internal
  Build-Depends:        base >= 4 && < 5
                      , lucid >= 2.9
                      , text

Test-Suite spec
  Type:                 exitcode-stdio-1.0
  Default-Language:     Haskell2010
  Hs-Source-Dirs:       src
                      , test
  Ghc-Options:          -Wall
  Main-Is:              Spec.hs
  Build-Depends:        base
                      , hspec
                      , QuickCheck
                      , quickcheck-instances

Source-Repository head
