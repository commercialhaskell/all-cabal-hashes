name:		word24
version:        1.0.3
x-revision: 1
synopsis:       24-bit word and int types for GHC
description:	24-bit Word and Int data types.
category:       Data
author:		John W. Lato, jwlato@gmail.com
maintainer:	John W. Lato, jwlato@gmail.com
license:	BSD3
license-file:	LICENSE
homepage:       http://www.tiresiaspress.us/haskell/word24
tested-with:    GHC == 7.0.4, GHC == 7.2.1, GHC == 7.4.2
stability:	stable

cabal-version:  >= 1.6
build-type:     Simple

extra-source-files:
  README
  LICENSE

flag buildTests
  description: Build test executables.
  default:     False

library
 hs-source-dirs:
   src

 build-depends:
   base >= 3 && < 4.7

 exposed-modules:
   Data.Int.Int24
   Data.Word.Word24

 ghc-options:   -O2 -Wall
 if impl(ghc >= 6.8)
   ghc-options: -fwarn-tabs

executable testWord24
  hs-source-dirs:
    src
    tests

  main-is: testword24.hs

  other-modules:
    QCUtils

  if flag(buildTests)
    build-depends:
      QuickCheck                 >= 2 && < 3,
      test-framework             >= 0.2 && < 0.3,
      test-framework-quickcheck2 >= 0.2 && < 0.3
  else
    buildable:  False

  build-depends:  base >= 3 && < 5

source-repository head
  type:     darcs
  location: http://www.tiresiaspress.us/haskell/word24
