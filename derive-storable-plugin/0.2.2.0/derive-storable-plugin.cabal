  hs-source-dirs:      benchmark/
  default-language:    Haskell2010
  other-modules:       TestCases, TestCasesOptimized
  Main-is:             Main.hs
  build-depends:       base >= 4.9 && < 4.13, deepseq, criterion >= 1.1.0
