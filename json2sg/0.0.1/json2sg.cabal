name: json2sg
version: 0.0.1
synopsis: Lossy conversion from JSON to Sugar
homepage: https://github.com/jxv/sugar#readme
description: Sugar is an alternative to: JSON, YAML, TOML, et cetera. Please see the README on GitHub at <https://github.com/jxv/sugar#readme>
category: Text, Configuration
bug-reports: https://github.com/jxv/sugar/issues
author: Joe Vargas
maintainer: Joe Vargas
license: OtherLicense
license-file: LICENSE
build-type: Simple
cabal-version: 2.0
extra-source-files:
    CHANGELOG.md
    LICENSE
    README.md

source-repository head
  type: git
  location: https://github.com/jxv/sugar

executable json2sg
  main-is: Main.hs
  default-language: Haskell2010
  hs-source-dirs:
      app
  build-depends:
      base >=4.7 && <5
    , json2sg-lib

library json2sg-lib
  exposed-modules:
      Sugar.Json.Convert
  hs-source-dirs:
      src
  default-extensions:
  ghc-options: -Wall
  build-depends:
      base >=4.7 && <5
    , bytestring >= 0.11 && <0.12
    , sugar == 0.0.1
    , sugar-json == 0.0.1.1
    , text
    , aeson
  default-language: Haskell2010

test-suite json2sg-tests
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:
      tests
  ghc-options: -Wall -rtsopts -threaded -with-rtsopts=-N
  build-depends:
      base
    , file-embed
    , hspec
    , sugar
    , sugar-json
    , json2sg-lib
    , tasty
    , tasty-hspec
    , text
  default-language: Haskell2010
