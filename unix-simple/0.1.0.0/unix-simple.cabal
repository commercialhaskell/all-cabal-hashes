cabal-version:       2.2
name:                unix-simple
version:             0.1.0.0
synopsis:            Straightforward bindings to the posix API
-- description:
homepage:            https://github.com/zenhack/haskell-unix-simple
license:             MIT
license-file:        LICENSE
author:              Ian Denhardt
maintainer:          ian@zenhack.net
copyright:           2021 Ian Denhardt
category:            System
build-type:          Simple
extra-source-files:
    CHANGELOG.md
  , README.md
  , .gitignore

source-repository head
  type:     git
  branch:   master
  location: https://github.com/zenhack/haskell-unix-simple

common shared-opts
  default-extensions:
      NoImplicitPrelude
    , OverloadedStrings
  build-depends:
      base >=4.12 && <5
    , bytestring >=0.10.12 && <0.12
    , zenhack-prelude ^>=0.1
  default-language:    Haskell2010

library
  import: shared-opts
  hs-source-dirs:      src
  exposed-modules:
      Unix
    , CString
  other-modules:
      Unix.Errors
    , Unix.C
    , Unix.C.Errors
    , Unix.IOVec
test-suite tests
  import: shared-opts
  build-depends: unix-simple
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Main.hs
