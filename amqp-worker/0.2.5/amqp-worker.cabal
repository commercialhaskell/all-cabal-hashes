-- Initial amqp-worker.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                amqp-worker
version:             0.2.5
synopsis:            High level functions for working with message queues
description:         High level functions for working with message queues
license:             BSD3
license-file:        LICENSE
author:              Sean Hess
maintainer:          seanhess@gmail.com
-- copyright:
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  -- other-extensions:
  exposed-modules:
    Network.AMQP.Worker
  other-modules:
      Network.AMQP.Worker.Connection
    , Network.AMQP.Worker.Key
    , Network.AMQP.Worker.Message
    , Network.AMQP.Worker.Poll
    , Network.AMQP.Worker.Queue
    , Network.AMQP.Worker.Worker
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:
    base >=4.9 && <5
    , aeson
    , amqp
    , bytestring
    , exceptions
    , data-default
    , monad-control
    , monad-loops
    , mtl
    , resource-pool
    , split
    , text
    , transformers-base


executable example
  hs-source-dirs:      test
  main-is:             Example.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall
  build-depends:       base
                     , aeson
                     , amqp-worker
                     , exceptions
                     , text
  default-language:    Haskell2010


test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:
      base
    , bytestring
    , aeson
    , amqp
    , amqp-worker
    , tasty
    , tasty-hunit
    , text
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010


source-repository head
  type:     git
  location: https://github.com/seanhess/amqp-worker
