synopsis:           Units of measurements used in aviation.
category:           Aviation
description:
  Units of measurements used in aviation.

homepage:           https://gitlab.com/tonymorris/aviation-units
bug-reports:        https://gitlab.com/tonymorris/aviation-units/issues
cabal-version:      >= 1.10
build-type:         Simple
extra-source-files: changelog
tested-with:        GHC == 7.10.3
                    , GHC == 8.0.2
                    , GHC == 8.2.2
                    , GHC == 8.4.4
                    , GHC == 8.6.4
                    , GHC == 8.6.5

source-repository   head
  type:             git
  location:         git@github.com:tonymorris/aviation-units.git

library
  default-language:
                    Haskell2010

  build-depends:
                    base >= 4.8 && < 5
                    , lens >= 4.15 && < 5

  ghc-options:
                    -Wall

  hs-source-dirs:
                    src

  exposed-modules:
                    Data.Aviation.Units
                    Data.Aviation.Units.Centimetres
                    Data.Aviation.Units.ImperialGallons
                    Data.Aviation.Units.Inches
                    Data.Aviation.Units.Kilograms
                    Data.Aviation.Units.Litres
                    Data.Aviation.Units.Millimetres
                    Data.Aviation.Units.Pounds
                    Data.Aviation.Units.Thouinches
                    Data.Aviation.Units.USGallons
