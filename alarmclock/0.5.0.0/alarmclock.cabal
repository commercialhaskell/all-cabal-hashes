category:            Concurrency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Control.Concurrent.AlarmClock
  build-depends:
      base >=4.8 && <4.12
    , stm
    , async
    , time
    , clock
    , unbounded-delays
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall
