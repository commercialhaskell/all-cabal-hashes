    attoparsec >= 0.10 && < 0.13,
    -- database:
    hasql-backend == 0.2.*,
    postgresql-binary == 0.5.*,
    postgresql-libpq == 0.9.*,
    -- data:
    uuid == 1.3.*,
    vector == 0.10.*,
    time >= 1.4 && < 1.6,
    hashtables >= 1.1 && < 1.3,
    scientific >= 0.2 && < 0.4,
    text >= 1 && < 1.3,
    bytestring >= 0.10 && < 0.11,
