name: cryptoids-class
version: 0.0.0
cabal-version: >=1.10
build-type: Simple
license: BSD3
license-file: LICENSE
maintainer: Gregor Kleen <aethoago@141.li>
synopsis: Typeclass-based interface to cryptoids
category: Web
author: Gregor Kleen <aethoago@141.li>
extra-source-files:
    changes.md

source-repository head
    type: git
    location: https://git.rheperire.org/cryptoids/cryptoids-class

library
    exposed-modules:
        Data.CryptoID.Class
        Data.CryptoID.Class.ImplicitNamespace
    build-depends:
        base >=4.10.1.0 && <4.11,
        cryptoids-types >=0.0.0 && <0.1,
        exceptions >=0.8.3 && <0.9
    default-language: Haskell2010
    default-extensions: DataKinds KindSignatures MultiParamTypeClasses
                        TypeFamilies FlexibleContexts ConstraintKinds PatternSynonyms
    hs-source-dirs: src
    other-modules:
        Paths_cryptoids_class
    ghc-options: -Wall -fno-warn-name-shadowing

