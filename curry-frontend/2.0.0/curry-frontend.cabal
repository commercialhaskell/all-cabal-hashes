  hs-source-dirs:   test
  test-module:      TestFrontend
  default-language: Haskell2010
  other-extensions: CPP, TemplateHaskell
  ghc-options:      -Wall
  build-depends:
      base >= 4.11
    , Cabal >= 1.20
