  build-depends:
    base >=4.7 && <5
    , HUnit
    , hspec
    , hspec-contrib
    , relude >= 1.2.1 && < 1.3
    , reflex >= 0.9.2 && < 1
    , reflex-test-host >= 0.1.2.3 && < 0.2
    , tinytools
    , extra >= 1.7.14 && < 1.8
    , data-default >= 0.7.1 && < 0.8
    , containers >= 0.6.7 && < 0.7
    , these >= 1.2 && < 1.3
    , dependent-sum >= 0.7.2 && < 0.8
    , vector >= 0.13.1 && < 0.14
    , data-ordlist >= 0.4.7 && < 0.5
  build-tool-depends: hspec-discover:hspec-discover
  default-language: Haskell2010
