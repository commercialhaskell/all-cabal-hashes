name:                threads-extras
version:             0.1.0.2
synopsis:            Extends the threads package with a bounded thread group
description:         Extends the threads package with a bounded thread group with the same interface as the original thread group.
license:             BSD3
license-file:        LICENSE
author:              Jonathan Fischoff
maintainer:          jonathangfischoff@gmail.com
copyright:           2016 skedge.me
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs: src
  exposed-modules: Control.Concurrent.Thread.BoundedThreadGroup
  build-depends: base >= 4.6 && < 5
               , threads >= 0.5 && < 0.5.2
               , stm >= 2.2 && < 2.5
  default-language:    Haskell2010
  ghc-options: -Wall

test-suite threads-extras-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , threads-extras
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/skedgeme/threads-extras
