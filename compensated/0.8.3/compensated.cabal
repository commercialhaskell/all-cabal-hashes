name:          compensated
category:      Numeric
version:       0.8.3
x-revision: 5
license:       BSD3
cabal-version: >= 1.10
license-file:  LICENSE
author:        Edward A. Kmett
maintainer:    Edward A. Kmett <ekmett@gmail.com>
stability:     provisional
homepage:      http://github.com/analytics/compensated/
bug-reports:   http://github.com/analytics/compensated/issues
copyright:     Copyright (C) 2013 Edward A. Kmett
build-type:    Simple
tested-with:   GHC == 8.0.2
             , GHC == 8.2.2
             , GHC == 8.4.4
             , GHC == 8.6.5
             , GHC == 8.8.3
             , GHC == 8.10.1
synopsis:      Compensated floating-point arithmetic
description:   This package provides compensated floating point arithmetic.

extra-source-files:
  .ghci
  .gitignore
  .hlint.yaml
  .vim.custom
  AUTHORS.markdown
  README.markdown
  CHANGELOG.markdown

source-repository head
  type: git
  location: git://github.com/analytics/compensated.git

library
  build-depends:
    base                      >= 4.9      && < 5,
    bifunctors                >= 5        && < 6,
    binary                    >= 0.5      && < 0.9,
    bytes                     >= 0.7      && < 1,
    cereal                    >= 0.3.5    && < 0.6,
    comonad                   >= 4        && < 6,
    deepseq                   >= 1.3      && < 1.6,
    distributive              >= 0.3      && < 1,
    hashable                  >= 1.1.2.3  && < 1.6,
    lens                      >= 4        && < 6,
    log-domain                >= 0.9      && < 1,
    semigroupoids             >= 5        && < 7,
    semigroups                >= 0.8.4    && < 1,
    safecopy                  >= 0.8.1    && < 0.11,
    vector                    >= 0.9      && < 0.14

  exposed-modules:
    Numeric.Compensated

  ghc-options: -Wall -fwarn-tabs -O2
  hs-source-dirs: src
  default-language: Haskell2010

benchmark criterion
  type:           exitcode-stdio-1.0
  main-is:        criterion.hs
  ghc-options:    -Wall -threaded
  hs-source-dirs: benchmarks
  default-language: Haskell2010
  build-depends:
    base,
    compensated,
    criterion >= 1.0
