name:            json2yaml
version:         0.2.2
license:         BSD3
license-file:    LICENSE
author:          Michael Snoyman <michael@snoyman.com>
maintainer:      Michael Snoyman <michael@snoyman.com>
synopsis:        Utility to convert a file from JSON to YAML format.
category:        Web
stability:       stable
cabal-version:   >= 1.2
build-type:      Simple
homepage:        http://github.com/snoyberg/json2yaml/tree/master

executable           json2yaml
    build-depends:   base >= 4 && < 5,
                     data-object-yaml >= 0.0.0 && < 0.1,
                     data-object-json >= 0.0.0 && < 0.1,
                     bytestring >= 0.9.1.4 && < 0.10,
                     attempt >= 0.2.0 && < 0.3
    ghc-options:     -Wall -fno-warn-orphans
    main-is:         json2yaml.hs
