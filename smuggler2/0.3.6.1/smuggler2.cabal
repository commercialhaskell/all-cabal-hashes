--    , typed-process  ^>=0.2.6
--    , smuggler2 -any

test-suite smuggler2-test
  import:         common-options
  import:         executable-options
  type:           exitcode-stdio-1.0
  hs-source-dirs: test
  main-is:        Test.hs
  build-depends:
    , containers
    , directory
    , filepath
    , ghc
    , ghc-paths
    , smuggler2
    , tasty
    , tasty-golden   ^>=2.3.4
    , typed-process
