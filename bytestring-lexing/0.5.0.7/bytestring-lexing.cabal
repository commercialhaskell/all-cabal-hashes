    -- necessary.  But then, we don't maintain any CI tests for
    -- older versions, so these are the lowest bounds we've verified.
    Build-Depends:  base              >= 4.5      && < 4.16
                 ,  bytestring        >= 0.9.2.1  && < 0.12

