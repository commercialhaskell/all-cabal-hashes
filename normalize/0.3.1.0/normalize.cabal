name:                normalize
version:             0.3.1.0
synopsis:            Normalize data using a variety of methods.
description:         Normalize data using a variety of methods. For use with csv files.
homepage:            http://github.com/GregorySchwartz/normalize#readme
license:             GPL-3
license-file:        LICENSE
author:              Gregory W. Schwartz
maintainer:          gsch@pennmedicine.upenn.edu
copyright:           Copyright: (c) 2018 Gregory W. Schwartz
category:            Bioinformatics
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Types
                     , Load
                     , Normalize
                     , Filter
                     , Utility
  build-depends:       base >= 4.7 && < 5
                     , cassava
                     , containers
                     , lens
                     , sparse-linear-algebra
                     , statistics
                     , text
                     , vector
  ghc-options:         -O2
  default-language:    Haskell2010

executable normalize
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -O2
  build-depends:       base
                     , normalize
                     , bytestring
                     , cassava
                     , containers
                     , optparse-generic
                     , text
                     , vector
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/GregorySchwartz/normalize
