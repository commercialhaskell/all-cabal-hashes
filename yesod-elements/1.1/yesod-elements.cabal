cabal-version: 2.0
name: yesod-elements
version: 1.1
synopsis: Non template haskell markup building function in the spirit of lucid
description: Build yesod widgets without shakespearean templating
license: MIT
license-file: LICENSE
author: Andrew Martin
maintainer: andrew.thaddeus@gmail.com
copyright: BSD3
category: Web
build-type: Simple

library
  exposed-modules:
      Yesod.Elements
  build-depends:
      base >=4.9 && <5.0
    , yesod-core >= 1.6
    , blaze-html >= 0.8
    , blaze-markup >= 0.8.2
    , bytestring >= 0.10
    , text >= 1.2.0
  hs-source-dirs: src
  default-language: Haskell2010
