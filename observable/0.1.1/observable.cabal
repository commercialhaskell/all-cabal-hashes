name:                observable
version:             0.1.1
synopsis:            Make your action to be observable and listen events from them.
description:         Make your action to be observable and listen events from them.
homepage:            https://github.com/iokasimov/observable
license:             BSD3
license-file:        LICENSE
author:              Murat Kasimov
maintainer:          Murat Kasimov <iokasimov.m@gmail.com>
copyright:           Copyright (c) 2018 Murat Kasimov
category:            Data, Control
build-type:          Simple
cabal-version:       >= 1.10

source-repository head
  type: git
  location: https://github.com/iokasimov/observable.git

library
  exposed-modules: Control.Observable, Control.Observable.Usage.Heartbeat
  build-depends: async, base == 4.*, transformers
  default-language: Haskell2010
  default-extensions: NoImplicitPrelude, PackageImports
  ghc-options: -fno-warn-tabs
