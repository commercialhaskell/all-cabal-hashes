  build-depends:       base >=4.6 && <5.0.0.0
                      ,bytestring   >=0.10 && <1.0
                      ,containers   >=0.5 && <1.0
                      ,exceptions   >=0.6 && <1.0
                      ,lens         >=4.6  && <5.0
                      ,linear       >=1.15 && <2.0
                      ,OpenGLRaw    >=1.5 && <2.0
                      ,semigroups   >=0.15 && <1.0
                      ,text         >=0.9 && <2.0
