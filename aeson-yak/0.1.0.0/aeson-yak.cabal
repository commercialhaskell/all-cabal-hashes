cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/tejon/aeson-yak

library
  exposed-modules:     Data.Aeson.Yak
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , aeson >= 0.4 && < 0.11
  hs-source-dirs:      src
  default-language:    Haskell2010
