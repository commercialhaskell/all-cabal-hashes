  build-depends:      base >= 4 && < 5,
                      filepath ,
                      directory,
                      stm,
                      old-time,
                      mtl,
                      timers-updatable
  exposed-modules:    System.Hiernotify.Polling
  other-modules:      System.Hiernotify
                      Control.Concurrent.STM.TMonoid
                      System.Hiernotify.Controller
                      


