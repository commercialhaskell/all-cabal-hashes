cabal-version:      3.0
name:               word-notes-datatype
version:            0.1.0.0
synopsis:           General datatypes for music creation for one instrument
description:        Inspired by the video by the link: <https://www.youtube.com/watch?v=rhgt3lZ1RUU>. A continuation of the work on @algorithmic-composition-basic@ and @dobutokO2@ series of packages.
homepage:           https://hackage.haskell.org/package/word-notes-datatype
bug-reports:        https://github.com/Oleksandr-Zhabenko/word-notes-datatype/issues
license:            MIT
license-file:       LICENSE
author:             Oleksandr Zhabenko
maintainer:         oleksandr.zhabenko@yahoo.com
copyright:          Oleksandr Zhabenko
category:           Sound
build-type:         Simple
extra-doc-files:    CHANGELOG.md, README.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Composition.Sound.Datatype
    -- other-modules:
    other-extensions: NoImplicitPrelude
    build-depends:    base >=4.13 && <5
    hs-source-dirs:   .
    default-language: Haskell2010

