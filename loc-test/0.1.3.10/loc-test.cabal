cabal-version: 3.0

name: loc-test
version: 0.1.3.10

synopsis: Test-related utilities related to the /loc/ package.

description:
    Test-related utilities related to the /loc/ package.
    Currently contains only Hedgehog generators.

category: Testing

homepage: https://github.com/chris-martin/loc

author:     Chris Martin <ch.martin@gmail.com>
maintainer: Chris Martin <ch.martin@gmail.com>

license: Apache-2.0
license-file: license.txt

build-type: Simple

extra-source-files: changelog.md

library
    default-language: Haskell2010
    hs-source-dirs: src
    default-extensions: NoImplicitPrelude
    ghc-options: -Wall
    exposed-modules: Test.Loc.Hedgehog.Gen
    build-depends:
        base >= 4.9 && < 4.17
      , containers >= 0.5.7.1 && < 0.7
      , hedgehog ^>= 1.0
      , loc ^>= 0.1.3
