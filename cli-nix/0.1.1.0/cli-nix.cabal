cabal-version:      >=1.10
name:               cli-nix
version:            0.1.1.0
license:            BSD3
license-file:       LICENSE
copyright:          Obsidian Systems LLC 2020
maintainer:         maintainer@obsidian.systems
author:             Obsidian Systems LLC
synopsis:           Bindings to the nix command-line interface
category:           Nix, Bindings
build-type:         Simple
extra-source-files: CHANGELOG.md
                    README.md

tested-with: GHC ==8.6.5 || ==8.8.4

library
  exposed-modules:  Bindings.Cli.Nix
  hs-source-dirs:   src
  default-language: Haskell2010
  build-depends:
      base            >=4.12    && <4.15
    , cli-extras      >=0.2     && <0.3
    , data-default    >=0.7.1.1 && <0.8
    , exceptions      >=0.10.3  && <0.11
    , lens            >=4.17.1  && <4.20
    , logging-effect  >=1.3.4   && <1.4
    , mtl             >=2.2.2   && <2.3
    , text            >=1.2.3.1 && <1.3
  ghc-options: -Wall

source-repository head
  type:     git
  location: https://github.com/obsidiansystems/cli-nix
