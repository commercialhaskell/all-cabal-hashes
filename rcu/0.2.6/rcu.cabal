  install-includes:
    pause.h
    pause_impl.h
  hs-source-dirs: examples
  ghc-options: -threaded -Wall -fwarn-tabs -feager-blackholing -rtsopts "-with-rtsopts=-N -qa -qb -qm -s"
  default-language: Haskell2010

