name:                coercion-extras
version:             0.1.0.0
synopsis:            Extra utilities for manipulating nominal and representational coercions
description:         Extra utilities for manipulating nominal (@(~)@) and representational (@Coercible@) coercions.
homepage:            https://github.com/mniip/coercion-extras
license:             BSD3
license-file:        LICENSE
author:              mniip
maintainer:          mniip@mniip.com
copyright:           (C) mniip 2019
category:            Data
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Data.Type.Role.Nominal,
                       Data.Type.Role.Representational,
                       Data.Type.Role.Phantom
  build-depends:       base >= 4.12 && == 4.*
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite test
  type:                     exitcode-stdio-1.0
  main-is:                  Test.hs
  build-depends:            coercion-extras, base >= 4.12 && == 4.*, containers
  hs-source-dirs:           test
  default-language:         Haskell2010
