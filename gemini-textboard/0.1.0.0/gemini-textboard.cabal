cabal-version:       2.2

name:                gemini-textboard
version:             0.1.0.0
synopsis:            A barebones textboard for the Gemini protocol
-- description:
homepage:            https://sr.ht/~fgaz/haskell-gemini/
bug-reports:         https://todo.sr.ht/~fgaz/haskell-gemini
license:             BSD-3-Clause
license-file:        LICENSE
author:              Francesco Gazzetta
maintainer:          Francesco Gazzetta <fgaz@fgaz.me>
copyright:           Â© 2020 Francesco Gazzetta and contributors
category:            Gemini
extra-source-files:  CHANGELOG.md, README.md

source-repository head
  type:                git
  location:            https://git.sr.ht/~fgaz/gemini-textboard

executable gemini-textboard
  main-is:             Main.hs
  other-extensions:    OverloadedStrings
  build-depends:       base ^>=4.13.0.0 || ^>=4.14.0.0
                     , gemini-server ^>=0.1.0.0
                     , gemini-router ^>=0.1.0.0
                     , language-gemini ^>=0.1.0.0
                     , nonce ^>=1.0.7
                     , cache ^>=0.1.3.0
                     , sqlite-simple ^>=0.4.18.0
                     , clock ^>=0.8
                     , text ^>=1.2.3.2
                     , time ^>=1.9.3 || ^>=1.10
                     , network-uri ^>=2.6.3.0 || ^>=2.7.0.0
                     , transformers ^>=0.5.6.2
  hs-source-dirs:      app
  ghc-options:         -Wall
  default-language:    Haskell2010

