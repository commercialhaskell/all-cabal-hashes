                   test-framework == 0.8.*,
                   test-framework-quickcheck2 == 0.3.*,
                   test-framework-hunit == 0.3.*,
                   random-shuffle == 0.0.4,
                   mtl >= 2.0 && < 2.2,
                   Nussinov78 == 0.1.0.0,
                   criterion == 0.6.*,
