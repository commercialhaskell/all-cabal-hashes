  build-depends:       ghc              >= 8.8 && < 9.1,
                       base             >= 4.7 && < 5,
                       bytestring       >= 0.10.10 && < 0.11,
                       containers       >= 0.6.2 && < 0.7,
                       directory        >= 1.3.6 && < 1.4,
