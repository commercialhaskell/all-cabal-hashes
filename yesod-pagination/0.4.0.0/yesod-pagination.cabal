  build-depends:       base
                     , hspec
                     , monad-logger
                     , persistent
                     , persistent-sqlite
                     , resource-pool
                     , resourcet
                     , shakespeare-text
                     , text
                     , utf8-string
                     , wai-test
                     , yesod
                     , yesod-pagination
                     , yesod-test
  default-language:    Haskell2010


