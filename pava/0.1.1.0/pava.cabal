cabal-version:      2.2
name:               pava
version:            0.1.1.0
license:            GPL-3.0-or-later
license-file:       LICENSE
copyright:          Dominik Schrempf (2020)
maintainer:         dominik.schrempf@gmail.com
author:             Dominik Schrempf
homepage:           https://github.com/dschrempf/pava#readme
bug-reports:        https://github.com/dschrempf/pava/issues
synopsis:           Greatest convex majorants and least concave minorants
description:
    Please see the README on GitHub at <https://github.com/dschrempf/pava#readme>

category:           Math, Statistics
build-type:         Simple
extra-source-files:
    README.md
    ChangeLog.md

source-repository head
    type:     git
    location: https://github.com/dschrempf/pava

library
    exposed-modules:
        Statistics.Gcm
        Statistics.Lcm
        Statistics.Pava.Common

    hs-source-dirs:   src
    other-modules:    Paths_pava
    autogen-modules:  Paths_pava
    default-language: Haskell2010
    ghc-options:      -Wall -Wunused-packages
    build-depends:
        base >=4.14.1.0 && <4.15,
        vector >=0.12.1.2 && <0.13

test-suite pava-test
    type:             exitcode-stdio-1.0
    main-is:          Spec.hs
    hs-source-dirs:   test
    other-modules:
        Statistics.GcmSpec
        Statistics.LcmSpec
        Statistics.Pava.CommonSpec
        Paths_pava

    default-language: Haskell2010
    ghc-options:
        -Wall -Wunused-packages -threaded -rtsopts -with-rtsopts=-N

    build-depends:
        base >=4.14.1.0 && <4.15,
        hspec >=2.7.4 && <2.8,
        pava -any,
        vector >=0.12.1.2 && <0.13

benchmark pava-bench
    type:             exitcode-stdio-1.0
    main-is:          Bench.hs
    hs-source-dirs:   bench
    other-modules:    Paths_pava
    default-language: Haskell2010
    ghc-options:
        -Wall -Wunused-packages -threaded -rtsopts -with-rtsopts=-N

    build-depends:
        base >=4.14.1.0 && <4.15,
        criterion >=1.5.7.0 && <1.6,
        mwc-random >=0.14.0.0 && <0.15,
        pava -any,
        vector >=0.12.1.2 && <0.13
