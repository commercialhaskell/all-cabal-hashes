  main-is: hello.hs
  hs-source-dirs:
      examples
  ghc-options: -W
  build-depends:
      FunGEn ==1.1.*
    , GLUT
    , OpenGL
    , base
    , random
  other-modules:
      Paths_FunGEn
  default-language: Haskell2010

