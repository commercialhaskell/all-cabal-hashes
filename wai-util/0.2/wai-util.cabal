                Network.Wai.Util

        build-depends:
                base == 4.*,
                wai,
                wai-extra,
                resourcet,
                conduit,
                aeson,
                transformers,
                blaze-builder,
                bytestring,
                text,
                case-insensitive,
                mime-mail,
                http-accept,
                network >= 2.4.0.0,
                http-types >= 0.7.2

source-repository head
        type:     git
        location: git://github.com/singpolyma/wai-util.git
