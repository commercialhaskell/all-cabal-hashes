source-repository head
    type: git
    location: https://github.com/composewell/bench-show

library
    hs-source-dirs:   lib
    exposed-modules:  BenchShow
                    , BenchShow.Tutorial
    other-modules:    BenchShow.Analysis
                    , BenchShow.Common
                    , BenchShow.Graph
                    , BenchShow.Report
    default-language: Haskell2010
    default-extensions:
        OverloadedStrings
        RecordWildCards
    ghc-options: -Wall
    build-depends:
          base              >= 4.8     && < 5
        , Chart             >= 1.6     && < 2
        , Chart-diagrams    >= 1.6     && < 2
        , csv               >= 0.1     && < 0.2
        , filepath          >= 1.3     && < 1.5
        , mwc-random        >= 0.13    && < 0.15
        , directory         >= 1.2     && < 1.4
        , transformers      >= 0.4     && < 0.6
        , ansi-wl-pprint    >= 0.6     && < 0.7
        , split             >= 0.2     && < 0.3
        , statistics        >= 0.15    && < 0.16
        , vector            >= 0.10    && < 0.13

test-suite test
    type: exitcode-stdio-1.0
    default-language: Haskell2010
    default-extensions:
        OverloadedStrings
        RecordWildCards
    hs-source-dirs: test
    main-is: Main.hs
    ghc-options: -Wall

    build-depends:
          bench-show
        , base              >= 4.8 && < 5
        , split             >= 0.2     && < 0.3
        , text              >= 1.1.1   && < 1.3
        -- , typed-process     >= 0.1.0.0 && < 0.3

test-suite doc
    type: exitcode-stdio-1.0
    default-language: Haskell2010
    default-extensions:
        OverloadedStrings
        RecordWildCards
    hs-source-dirs: test
    main-is: Doc.hs
    ghc-options: -Wall

    build-depends:
          bench-show
        , base              >= 4.8 && < 5
        , split             >= 0.2 && < 0.3
