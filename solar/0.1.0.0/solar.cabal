library
  hs-source-dirs:      src
  exposed-modules:     Data.Time.Solar
  build-depends:       base >= 4.7 && < 5, time >= 1.8 && < 1.10
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/tsahyt/solar
