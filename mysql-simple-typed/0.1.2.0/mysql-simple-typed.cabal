name:                mysql-simple-typed
version:             0.1.2.0
synopsis:            Typed extension to mysql simple
description:         Provide all required bindings for use with the typedquery
homepage:            https://github.com/tolysz/mysql-simple-typed
license:             BSD3
license-file:        LICENSE
author:              Marcin Tolysz
maintainer:          tolysz@gmail.com
copyright:           2014-9 Marcin Tolysz
category:            Database
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:     Database.MySQL.Simple.DBmore
                       Database.MySQL.Simple.DBmoreTH
                       Database.MySQL.Simple.TypedQuery
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.5 && < 5
               ,       mysql
               ,       mysql-simple >= 0.4.5
               ,       typedquery
               ,       template-haskell
               ,       utf8-string
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall -fno-warn-type-defaults
