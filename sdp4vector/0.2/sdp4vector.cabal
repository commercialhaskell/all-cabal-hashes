Library
  hs-source-dirs:   src
  
  default-language: Haskell2010
  
  build-depends:
    base         >= 4.12 && < 5,
    sdp          >= 0.2  && < 0.3,
    vector       >= 0.12 && < 0.13
  
  ghc-options: -Wall -Wcompat -Wno-orphans
  
  exposed-modules:
    SDP.Vector
    SDP.Vector.Unboxed

