copyright: 2019 Andrew Martin
category: Data
extra-source-files: CHANGELOG.md

library
  exposed-modules:
    Data.Unlifted
    Data.Text.Short.Unlifted
  hs-source-dirs: src
  build-depends:
    , base >=4.16 && <5
    , text-short >=0.1.5
    , bytestring >=0.11.3.1
  default-language: Haskell2010
