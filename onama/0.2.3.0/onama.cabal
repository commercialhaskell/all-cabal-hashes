cabal-version:       >=1.10

name: onama
version: 0.2.3.0
synopsis: HTML-parsing primitives for Parsec.
description: Provides Parsec primitives for parsing various HTML entities.
             Requires Parsec in order to use and combine them.
homepage:            https://github.com/williamyaoh/onama/
bug-reports:         https://github.com/williamyaoh/onama/issues/
category:            Data, Text
author:              William Yao
maintainer:          williamyaoh@gmail.com
license:             BSD3
license-file:        LICENSE
build-type:          Simple

source-repository head
  type:     git
  location: https://www.github.com/williamyaoh/onama/

library
  exposed-modules:
    Text.HTML.Onama
  build-depends:
      base ==4.*
    , tagsoup ==0.14.*
    , parsec <3.2
    , containers <0.7
  hs-source-dirs: src/lib
  default-language:    Haskell2010
