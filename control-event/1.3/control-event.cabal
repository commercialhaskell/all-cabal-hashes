name:                control-event
version:             1.3
synopsis:            Event scheduling system.
description:         Allows scheduling and canceling of IO actions to be
                     executed at a specified future time.
category:            Control
license:             BSD3
license-file:        LICENSE
author:              Thomas DuBuisson
maintainer:          Thomas.DuBuisson@gmail.com
build-type:          Simple
Cabal-Version:       >= 2.0
stability:           beta
tested-with:         GHC == 6.10.3
extra-source-files:  Test/Event.hs Test/Timeout.hs

Library
  build-Depends:       base >= 4.0 && < 5,
                       time >= 1.1,
                       containers >= 0.1,
                       stm >= 2.1
  exposed-modules:     Control.Event, Control.Event.Timeout, Control.Event.Relative
  default-language:    Haskell2010

test-suite control-event-test-absolute
    default-language: Haskell2010
    type: exitcode-stdio-1.0
    hs-source-dirs: Test
    main-is: Event.hs
    ghc-options:
    build-depends:
        base,
        control-event,
        stm,
        containers,
        time

test-suite control-event-test-relative
    default-language: Haskell2010
    type: exitcode-stdio-1.0
    hs-source-dirs: Test
    main-is: Timeout.hs
    ghc-options:
    build-depends:
        base,
        control-event,
        stm,
        containers,
        time
