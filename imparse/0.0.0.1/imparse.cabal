                   MissingH,
                   containers == 0.4.2.1,
                   text == 0.11.2.3, 
                   split,
                   directory,
                   staticanalysis,
                   compilation,
                   ascetic,
                   uxadt,
                   richreports

Executable imparse
  Main-Is:         Main.hs
  Build-Depends:   base >= 3 && < 5,
                   MissingH,
                   containers == 0.4.2.1,
                   text == 0.11.2.3, 
                   split,
                   directory,
                   staticanalysis,
                   compilation,
                   ascetic,
                   uxadt,
                   richreports

