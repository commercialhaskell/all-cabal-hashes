  main-is:             Others.hs
  build-depends:       base              >= 4.12    && < 4.13
                     , bytestring        >= 0.10    && < 0.11
                     , network           >= 2.6     && < 3.2
                     , reflex            >= 0.5     && < 0.7
                     , reflex-backend-socket
                     , reflex-basic-host >= 0.2     && < 0.3
                     , witherable        >= 0.2     && < 0.4
  hs-source-dirs:      example
  ghc-options:         -Wall -threaded
  default-language:    Haskell2010
