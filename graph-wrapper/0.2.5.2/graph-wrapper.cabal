source-repository head
    type: git
    location: https://github.com/soenkehahn/graph-wrapper

Library
    Hs-Source-Dirs:
        src
    Exposed-Modules:
        Data.Graph.Wrapper
        Data.Graph.Wrapper.Internal

    Build-Depends:
        base >= 3.0 && < 5.0,
        array >= 0.3 && < 0.6,
        containers >= 0.3 && < 0.7

test-suite spec
    type:
        exitcode-stdio-1.0
    hs-source-dirs:
        test, src
    main-is:
        Spec.hs
    build-depends:
        base >= 3.0 && < 5.0,
        array,
        containers,
        deepseq,
        hspec,
        QuickCheck
    other-modules:
      Data.Graph.Wrapper
      Data.Graph.Wrapper.Internal
      Data.Graph.WrapperSpec
