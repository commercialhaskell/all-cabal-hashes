    exposed-modules: Data.Choose
                     Data.Choose.MChoose
                     Data.Choose.IO
                     Data.Choose.ST
                     Data.Permute
                     Data.Permute.MPermute
                     Data.Permute.IO
                     Data.Permute.ST
                     
