build-type:      Custom
tested-with:     GHC ==6.8.2, GHC ==6.10.1

extra-source-files:  examples/Enumerate.hs
                     tests/Test/Choose.hs
                     tests/Test/Permute.hs
                     tests/Driver.hs
                     tests/Main.hs
                     tests/Choose.hs
                     tests/STChoose.hs
                     tests/Permute.hs
                     tests/STPermute.hs
