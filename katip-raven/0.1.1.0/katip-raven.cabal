cabal-version:       2.4

name:                katip-raven
version:             0.1.1.0
synopsis:            Katip scribe for raven (https://sentry.io)
-- description:
homepage:            https://github.com/cachix/katip-raven
-- bug-reports:
license:             Apache-2.0
license-file:        LICENSE
author:              Domen Kozar
maintainer:          domen@cachix.org
-- copyright:
category:            Web
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Katip.Scribes.Raven
  default-extensions:  Rank2Types, OverloadedStrings
  build-depends:       base >=4.11 && <5
                     , aeson >= 2.0.0.0
                     , text
                     , katip
                     , raven-haskell >= 0.1.4.1
                     , string-conv
                     , unordered-containers
  hs-source-dirs:      src
  default-language:    Haskell2010
