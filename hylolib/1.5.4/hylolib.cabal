cabal-version:       2.0
Name:                hylolib
Version:             1.5.4
Synopsis:            Tools for hybrid logics related programs
License:             GPL
License-file:        LICENSE
Author:              Daniel Gorin
Maintainer:          guillaumh@gmail.com
Build-Type:          Simple
Category:            Theorem Provers
source-repository head
    type:     darcs
    location: http://hub.darcs.net/gh/hylolib

Library
  Default-language:    Haskell2010
  Build-Depends:       base >= 4.10, base < 5,
                       containers,
                       array,
                       mtl >= 2,
                       pretty >= 1,
                       random >= 1,
                       uniplate >= 1.6.12
  Exposed-modules:     HyLo.Signature
                       HyLo.Signature.Simple
                       HyLo.Signature.String
                       HyLo.Formula
                       HyLo.Formula.Rewrite
                       HyLo.InputFile
                       HyLo.InputFile.Lexer
                       HyLo.InputFile.Parser
                       HyLo.InputFile.OldLexer
                       HyLo.InputFile.OldParser
                       HyLo.Model
                       HyLo.Model.Herbrand
                       HyLo.Model.PrettyPrint
                       HyLo.Util
                       Data.EnumSet
                       Data.EnumMap
  Other-modules:       
  Default-extensions:  GADTs
                       ScopedTypeVariables
                       MultiParamTypeClasses
                       FunctionalDependencies
                       FlexibleInstances
                       UndecidableInstances
                       TypeFamilies
  hs-source-dirs:      src
  ghc-options:         -Wall -O2
