cabal-version:      2.4
name:               ipa
version:            0.3
x-revision: 2
synopsis:           Internal Phonetic Alphabet (IPA)
description:        See the README at https://gitlab.com/ngua/ipa-hs
license:            BSD-3-Clause
license-file:       LICENSE
author:             Rory Tyler Hayford
maintainer:         rory.hayford@protonmail.com
copyright:          (c) Rory Tyler Hayford, 2021
homepage:           https://gitlab.com/ngua/ipa-hs/-/blob/master/README.org
category:           language
extra-source-files:
  README.org
  CHANGELOG.org

source-repository head
  type:     git
  location: https://gitlab.com/ngua/ipa-hs

common common-options
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints

common common-extensions
  default-extensions: OverloadedStrings

library
  import:           common-options, common-extensions
  build-depends:
    , attoparsec          ^>=0.13.2
    , base                >=4.11   && <5
    , text                ^>=1.2.4
    , unicode-transforms  ^>=0.3.7

  exposed-modules:
    Language.IPA
    Language.IPA.Class
    Language.IPA.Parser
    Language.IPA.Types

  hs-source-dirs:   src
  default-language: Haskell2010

test-suite ipa-testsuite
  import:           common-options, common-extensions
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  build-depends:
    , base
    , hspec
    , ipa
    , text

  main-is:          Main.hs
  default-language: Haskell2010
