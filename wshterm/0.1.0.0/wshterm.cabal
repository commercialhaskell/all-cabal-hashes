name:                wshterm
version:             0.1.0.0
synopsis:            Terminal emulator over websockets.
description:         wshterm wraps google's hterm library and allows you to run
                     terminal applications in a browser.
license:             BSD3
license-file:        LICENSE
author:              Luke Clifton
maintainer:          lukec@themk.net
copyright:           (c) 2019 Luke Clifton
category:            Web
build-type:          Simple
extra-source-files:
    ChangeLog.md,
    hterm_license,
    static/hterm_all.js,
    static/index.html,
    static/wshterm.js

cabal-version:       >=1.10

executable wshterm
  main-is:             Main.hs
  build-depends:
    base >=4.10 && <4.13,
    async,
    binary,
    bytestring,
    file-embed,
    posix-pty,
    process,
    wai,
    wai-app-static,
    wai-websockets,
    warp,
    websockets
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -threaded
