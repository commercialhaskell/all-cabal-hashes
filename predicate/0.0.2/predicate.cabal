name:                 predicate
version:              0.0.2
synopsis:             Predicates
description:          A library for predicates
license:              BSD3
license-file:         LICENCE
author:               Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
maintainer:           Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
copyright:            Copyright (C) 2023 Tony Morris
category:             Test
build-type:           Simple
extra-source-files:   changelog.md
cabal-version:        >=1.10
homepage:             https://gitlab.com/tonymorris/predicate
bug-reports:          https://gitlab.com/tonymorris/predicate/issues
tested-with:          GHC == 8.6.5, GHC == 9.0.2

source-repository     head
  type:               git
  location:           git@gitlab.com:tonymorris/predicate.git

library
  exposed-modules:
                      Data.Predicate

  build-depends:        base                 >= 4     && < 6
                      , lens                 >= 4.19  && < 6
                      , contravariant        >= 1.5.5 && < 2
                      , mtl                  >= 2.2.2 && < 3

  hs-source-dirs:     src
  default-language:   Haskell2010
  ghc-options:        -Wall
