name: traction
version: 0.3.0
license: BSD3
license-file: LICENSE
author: Mark Hibberd <mark@hibberd.id.au>
maintainer: Mark Hibberd <mark@hibberd.id.au>
copyright: (c) 2017 Mark Hibberd
cabal-version: 1.24
build-type: Simple
category: Database
synopsis: Tools for postgresql-simple.
description:
  A few tools for using postgresql-simple.
source-repository head
  type: git
  location: https://github.com/markhibberd/traction

library
  default-language: Haskell2010

  build-depends:
      base >= 3 && < 5
    , bytestring == 0.10.*
    , containers >= 0.5.8 && < 0.7
    , exceptions == 0.10.*
    , mmorph == 1.*
    , postgresql-simple == 0.5.*
    , resource-pool == 0.2.*
    , syb >= 0.4 && < 0.8
    , template-haskell
    , text == 1.2.*
    , time >= 1.5 && < 1.10
    , transformers == 0.5.*
    , transformers-either == 0.0.*

  ghc-options:
    -Wall

  hs-source-dirs:
    src

  exposed-modules:
    Traction.Control
    Traction.Migration
    Traction.Prelude
    Traction.Sql
    Traction.QQ

test-suite test
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  main-is: test.hs
  hs-source-dirs: test
  build-depends:
      base >= 3 && < 5
    , hedgehog == 0.5.*
    , mmorph == 1.*
    , postgresql-simple == 0.5.*
    , resource-pool == 0.2.*
    , text == 1.2.*
    , traction

  other-modules:
    Test.Traction

  ghc-options:
    -Wall
    -threaded
