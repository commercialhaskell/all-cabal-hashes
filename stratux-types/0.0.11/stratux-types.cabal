name:               stratux-types
version:            0.0.11
license:            BSD3
license-file:       LICENCE
author:             Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
maintainer:         Tony Morris
copyright:          Copyright (C) 2016-2017 Tony Morris
synopsis:           A library for reading JSON output from stratux
category:           Aviation, ADSB, Stratux, JSON
description:        A library for reading JSON output from stratux <http://stratux.me/>
homepage:           https://github.com/tonymorris/stratux-types
bug-reports:        https://github.com/tonymorris/stratux-types/issues
cabal-version:      >= 1.10
build-type:         Simple
extra-source-files: changelog.md

source-repository   head
  type:             git
  location:         git@github.com:tonymorris/stratux-types.git

library
  default-language:
                    Haskell2010

  build-depends:
                      base >= 4 && < 6
                    , lens >= 4.0 && < 5.0       
                    , aeson >= 1.0 && < 1.5
                    , time >= 1.4 && < 2.0
                    , bytestring >= 0.10 && < 1.0     
                    , scientific >= 0.3 && < 1.0
                    , text >= 1.2 && < 2.0

  ghc-options:
                    -Wall

  default-extensions:
                      NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    Data.Aviation.Stratux.Types
                    Data.Aviation.Stratux.Types.EmitterCategory
                    Data.Aviation.Stratux.Types.GpsSolution
                    Data.Aviation.Stratux.Types.IcaoAddr
                    Data.Aviation.Stratux.Types.NetworkConnection
                    Data.Aviation.Stratux.Types.Settings
                    Data.Aviation.Stratux.Types.Situation
                    Data.Aviation.Stratux.Types.Status
                    Data.Aviation.Stratux.Types.TargetType
                    Data.Aviation.Stratux.Types.Traffic
                    Data.Aviation.Stratux.Types.UTCTimes
                    Data.Aviation.Stratux.Types.Word8s
