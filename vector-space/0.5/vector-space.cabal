build-type:          Simple

Library
  hs-Source-Dirs:      src
  Extensions:          
  Build-Depends:       base < 4.12, MemoTrie
  Exposed-Modules:     
                     Data.AdditiveGroup
                     Data.VectorSpace
                     Data.Basis
                     Data.LinearMap
                     Data.Maclaurin
--                   Data.Horner
                     Data.Derivative
                     Data.Cross
                     Data.AffineSpace
                     Data.NumInstances


  -- This library relies on type families working as well as in 6.10.
  if impl(ghc < 6.10) {
    buildable: False
  }
  ghc-options:         -Wall -O2
  ghc-prof-options:    -prof -auto-all 

