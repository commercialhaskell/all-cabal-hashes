cabal-version:       1.18
name:                fedora-img-dl
version:             0.1
synopsis:            Fedora image download tool
description:         Tool to download Fedora iso and image files
license:             GPL-3
license-file:        LICENSE
author:              Jens Petersen
maintainer:          juhpetersen@gmail.com
copyright:           2019 Jens Petersen
category:            Utility
build-type:          Simple
extra-doc-files:     README.md
                   , CHANGELOG.md
tested-with:         GHC == 7.6.3, GHC == 7.8.4, GHC == 7.10.3, GHC == 8.0.2,
                     GHC == 8.2.2, GHC == 8.4.4, GHC == 8.6.4

source-repository head
  type:     git
  location: https://github.com/juhp/fedora-img-dl.git

executable fedora-img-dl
  main-is:             Main.hs
  other-modules:       Paths_fedora_img_dl

  build-depends:       base < 5,
                       bytestring,
                       directory,
                       filepath,
                       html-conduit,
                       http-client,
                       http-client-tls,
                       http-types,
                       hxt,
                       network-uri,
                       optparse-applicative,
                       simple-cmd >= 0.1.4,
                       simple-cmd-args >= 0.1.1,
                       text,
                       unix,
                       xdg-userdirs,
                       xml-conduit
  if impl(ghc<8.0)
      Build-depends: semigroups

  ghc-options:         -fwarn-missing-signatures
                       -Wall

  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
