    hs-source-dirs:     Examples
    build-depends:      base              >= 4.9  && < 5
                      , copilot           >= 3.2  && < 3.3
                      , copilot-libraries >= 3.2  && < 3.3
    default-language:   Haskell2010

executable counter
    main-is:            Counter.hs
    hs-source-dirs:     Examples
    build-depends:      base              >= 4.9  && < 5
                      , copilot           >= 3.2  && < 3.3
    default-language:   Haskell2010

