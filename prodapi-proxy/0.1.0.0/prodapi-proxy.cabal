    prodapi >= 0.1.0 && < 0.2,
    prometheus-client >= 1.1.1 && < 1.2,
    servant >= 0.20.1 && < 0.21,
    servant-server >= 0.20 && < 0.21,
    random-shuffle >= 0.0.4 && < 0.1,
    tls >= 2.0.5 && < 2.1,
    warp-tls >= 3.4.5 && < 3.5
