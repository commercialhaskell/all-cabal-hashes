name:                discrete-space-map
version:             0.0.5
synopsis:            A discrete space map.
description:         A discrete space map implemented as a zipper on an infinite perfect binary tree.
homepage:            https://github.com/sjoerdvisscher/discrete-space-map
license:             BSD3
license-file:        LICENSE
author:              Sjoerd Visscher
maintainer:          sjoerd@w3future.com
category:            Data
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Data.DiscreteSpaceMap,
                       Data.DiscreteSpaceMap.Internal
  build-depends:       base ==4.*,
                       comonad >=4.0 && <6.0,
                       keys ==3.*,
                       distributive >=0.4 && <1,
                       semigroupoids >=4.0 && <6.0,
                       adjunctions ==4.*

source-repository head
  type:     git
  location: git://github.com/sjoerdvisscher/discrete-space-map.git
