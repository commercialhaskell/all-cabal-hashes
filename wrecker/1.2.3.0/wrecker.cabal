               , containers             >= 0.5.5
               , cookie                 >= 0.4.1
               , cryptonite             >= 0.6
               , data-default           >= 0.5.3
               , data-default-class     >= 0.0.1
               , deepseq                >= 1.3
               , exceptions             >= 0.8
               , filepath               >= 1.3
               , http-client            >= 0.5.5
               , http-client-tls        >= 0.3.3
