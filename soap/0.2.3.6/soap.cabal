    , http-client          >= 0.2 && < 1.0
    , http-types           >= 0.9 && < 1.0
    , iconv                >= 0.4.1.3 && < 0.5
    , mtl                  >= 2.2.1 && < 3.0
    , resourcet            >= 1.1.7.4 && < 1.3
    , text                 >= 1.2.2.1 && < 2.1
