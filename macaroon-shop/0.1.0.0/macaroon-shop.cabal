cabal-version:      2.4
name:               macaroon-shop
version:            0.1.0.0
synopsis:           A toolkit for working with macaroons
license:            ISC
author:             Ian Shipman
maintainer:         ics@gambolingpangolin.com
homepage:           https://github.com/GambolingPangolin/macaroon-shop
extra-source-files: CHANGELOG.md


common core
    default-language: Haskell2010

    ghc-options:
        -Wall

    build-depends:
          base                      ^>=4.12.0.0
        , bytestring                ^>=0.10
        , bytes                     ^>=0.17
        , cereal                    ^>=0.5
        , containers                ^>=0.6
        , cryptonite                ^>=0.26
        , memory                     >=0.14
        , saltine                   ^>=0.1
        , transformers              ^>=0.5

    other-modules:
        Authorize.Macaroon.Crypto
        Authorize.Macaroon.Serialize
        Authorize.Macaroon.Types
        Authorize.Macaroon.Verify

library
    import:           core
    default-language: Haskell2010
    hs-source-dirs:   src/
    exposed-modules:
        Authorize.Macaroon

test-suite macaroon-shop-tests
    import:  core
    type:    exitcode-stdio-1.0
    main-is: Main.hs

    hs-source-dirs:
        src/
        test/

    ghc-options:
        -threaded -O2

    other-modules:
        Authorize.Macaroon
        Authorize.Macaroon.Gen

    build-depends:
        hedgehog                    ^>=1.0
