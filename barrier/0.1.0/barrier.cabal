  hs-source-dirs:      examples
  ghc-options:         -Wall -O2
  default-language:    Haskell2010

test-suite tasty
  type:                exitcode-stdio-1.0
  main-is:             tasty.hs
  build-depends:       base
                     , bytestring
                     , lens-family-core >=1.2  && <1.3
                     , tasty            >=0.10 && <0.11
                     , tasty-golden     >=2.2  && <2.4
                     , barrier
  hs-source-dirs:      tests
  ghc-options:         -Wall -O2
  default-language:    Haskell2010