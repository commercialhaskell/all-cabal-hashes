cabal-version:       >=1.10

name:                icfpc2020-galaxy
version:             0.1.0.1
synopsis:            A strange message received at the Pegovka observatory
description:         A strange message received at the Pegovka observatory. For more info read https://icfpcontest2020.github.io/
license:             MIT
author:              mniip
maintainer:          mniip@mniip.com
copyright:           2020 mniip, 2020 ICFPC organizers
category:            ACME
build-type:          Simple

library
  exposed-modules:   Alien.Interaction
                   , Alien.FFI
                   , Alien.Prelude
                   , Alien.Galaxy
  hs-source-dirs:
      ./src
  build-depends:       base >= 4.10 && < 4.15
                     , ghc-prim
                     , transformers >= 0.5
  ghc-options: -O2 -Wall -Wno-missing-signatures
  default-language: Haskell2010
