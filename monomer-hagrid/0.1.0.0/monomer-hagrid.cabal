cabal-version:      2.0
name:               monomer-hagrid
version:            0.1.0.0
license:            MIT
license-file:       LICENSE
maintainer:         garethdanielsmith@gmail.com
homepage:           https://github.com/Dretch/monomer-hagrid#readme
bug-reports:        https://github.com/Dretch/monomer-hagrid/issues
synopsis:           A datagrid widget for the Monomer library.
description:
    A configurable Monomer widget that shows a scrollable grid of data.

category:           GUI
build-type:         Simple
extra-source-files:
    README.md
    ChangeLog.md

source-repository head
    type:     git
    location: https://github.com/Dretch/monomer-hagrid

library
    exposed-modules:    Monomer.Hagrid
    hs-source-dirs:     src
    other-modules:      Paths_monomer_hagrid
    autogen-modules:    Paths_monomer_hagrid
    default-language:   Haskell2010
    default-extensions:
        DisambiguateRecordFields DuplicateRecordFields FlexibleContexts
        OverloadedRecordDot OverloadedStrings

    ghc-options:
        -Wall -Wcompat -Wincomplete-record-updates
        -Wincomplete-uni-patterns -Wredundant-constraints

    build-depends:
        base >=4.7 && <5,
        containers >=0.6.5.1 && <0.7,
        data-default-class >=0.1.2.0 && <0.2,
        ilist >=0.4.0.1 && <0.5,
        lens >=5.1.1 && <5.2,
        monomer >=1.5.0.0 && <1.6,
        text >=1.2.5.0 && <1.3

executable examples
    main-is:            Main.hs
    hs-source-dirs:     examples
    other-modules:      Paths_monomer_hagrid
    default-language:   Haskell2010
    default-extensions:
        DisambiguateRecordFields DuplicateRecordFields FlexibleContexts
        OverloadedRecordDot OverloadedStrings

    ghc-options:
        -threaded -rtsopts -with-rtsopts=-N -Wall -Wcompat
        -Wincomplete-record-updates -Wincomplete-uni-patterns
        -Wredundant-constraints

    build-depends:
        base >=4.7 && <5,
        containers >=0.6.5.1 && <0.7,
        data-default-class >=0.1.2.0 && <0.2,
        ilist >=0.4.0.1 && <0.5,
        lens >=5.1.1 && <5.2,
        monomer >=1.5.0.0 && <1.6,
        monomer-hagrid -any,
        text >=1.2.5.0 && <1.3,
        time >=1.11.1.1 && <1.12

test-suite spec
    type:               exitcode-stdio-1.0
    main-is:            Spec.hs
    build-tool-depends: hspec-discover:hspec-discover ==2.*
    hs-source-dirs:     test
    other-modules:
        Monomer.HagridSpec
        Monomer.TestUtil
        Paths_monomer_hagrid

    default-language:   Haskell2010
    default-extensions:
        DisambiguateRecordFields DuplicateRecordFields FlexibleContexts
        OverloadedRecordDot OverloadedStrings

    ghc-options:
        -threaded -rtsopts -with-rtsopts=-N -Wall -Wcompat
        -Wincomplete-record-updates -Wincomplete-uni-patterns
        -Wredundant-constraints

    build-depends:
        base >=4.7 && <5,
        bytestring >=0.11.3.1 && <0.12,
        containers >=0.6.5.1 && <0.7,
        data-default >=0.7.1.1 && <0.8,
        data-default-class >=0.1.2.0 && <0.2,
        hspec ==2.*,
        ilist >=0.4.0.1 && <0.5,
        lens >=5.1.1 && <5.2,
        monomer >=1.5.0.0 && <1.6,
        monomer-hagrid -any,
        mtl >=2.2.2 && <2.3,
        stm >=2.5.0.2 && <2.6,
        text >=1.2.5.0 && <1.3
