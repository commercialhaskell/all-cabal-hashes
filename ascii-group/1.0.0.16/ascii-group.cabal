cabal-version: 3.0

name: ascii-group
version: 1.0.0.16
synopsis: ASCII character groups
category: Data, Text

description:
    This package defines a @Group@ type that describes
    the two varieties of ASCII character, and provides
    some functions for classifying characters by group.

license: Apache-2.0
license-file: license.txt

author: Chris Martin
maintainer: Chris Martin, Julie Moronuki

homepage: https://github.com/typeclasses/ascii-group
bug-Reports: https://github.com/typeclasses/ascii-group/issues

extra-source-files: *.md

source-repository head
    type: git
    location: git://github.com/typeclasses/ascii-group.git

common base
    default-language: GHC2021
    ghc-options: -Wall

    default-extensions:
        NoImplicitPrelude

    build-depends:
      , ascii-char ^>= 1.0
      , base ^>= 4.16 || ^>= 4.17 || ^>= 4.18

library
    import: base
    hs-source-dirs: library

    default-extensions:
        DeriveAnyClass
        DeriveDataTypeable
        DeriveGeneric
        DerivingStrategies
        StandaloneDeriving

    build-depends:
      , hashable ^>= 1.4.2

    exposed-modules:
        ASCII.Group

test-suite test-ascii-group
    import: base
    type: exitcode-stdio-1.0
    hs-source-dirs: test
    main-is: Main.hs

    build-depends:
      , ascii-group
      , hedgehog ^>= 1.1.2 || ^>= 1.2

    default-extensions:
        OverloadedStrings
        QuasiQuotes
        TemplateHaskell
