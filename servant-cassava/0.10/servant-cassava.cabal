cabal-version:       >=1.10
name:                servant-cassava
version:             0.10
x-revision:          7

synopsis:            Servant CSV content-type for cassava
category:            Servant, Web, CSV
description:         Servant CSV content-type for cassava.

homepage:            http://haskell-servant.readthedocs.org/
bug-reports:         http://github.com/haskell-servant/servant-cassava/issues
license:             BSD3
license-file:        LICENSE
author:              Servant Contributors
maintainer:          haskell-servant-maintainers@googlegroups.com
copyright:           2015-2018 Servant Contributors
build-type:          Simple
tested-with:
  GHC ==7.8.4
   || ==7.10.3
   || ==8.0.2
   || ==8.2.2
   || ==8.4.4
   || ==8.6.5
   || ==8.8.1

source-repository head
  type: git
  location: http://github.com/haskell-servant/servant-cassava.git

library
  exposed-modules:     Servant.CSV.Cassava
  build-depends:       base >=4.7 && <5
                     , base-compat >=0.9.1 && <0.12
                     , bytestring
                     , cassava >=0.4.3 && <0.6
                     , servant >=0.7 && <0.18
                     , http-media
                     , vector
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall

test-suite example
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:
    example
  ghc-options: -Wall
  build-depends:
      base
    , base-compat
    , bytestring
    , http-media
    , servant
    , cassava
    , servant-cassava
    , servant-server >=0.4.4.5  && <0.18
    , wai            >=3.0.3.0  && <3.3
    , warp           >=3.0.13.1 && <3.4
  default-language: Haskell2010
