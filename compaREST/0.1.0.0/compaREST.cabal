        free >=5.1.7 && <5.2,
        containers >=0.6.5.1 && <0.7,
        comonad >=5.0.8 && <5.1,
        attoparsec >=0.13.2.5 && <0.14,
        transformers >=0.5.6.2 && <0.6,
        mtl >=2.2.2 && <2.3,
